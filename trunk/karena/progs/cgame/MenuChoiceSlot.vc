class MenuChoiceSlot : MenuChoice;

int pic_M_FSLOT;

//**************************************************************************
//**
//**	Slot for saves and input lines
//**
//**************************************************************************

//==========================================================================
//
//  InitSlot
//
//==========================================================================

void InitSlot()
{
	pic_M_FSLOT = R_RegisterPic('m_fslot');
}

//==========================================================================
//
//  DrawSlot
//
//==========================================================================

int DrawSlot(int y, string text, bool entering)
{
	int xx;
	int j;

	DrawPic(0, y, pic_M_FSLOT);

	SetFont('smallfont');
	SetTextAlign(hleft, vtop);
	DrawText(5, y + 5, text);
	if (entering)
	{
		DrawCursor();
	}
	return 20;
}

