class MenuChoice_DeathMatch : MenuChoiceEnum;

MenuChoice Level;
MenuChoice Monsters;

int GetInitialValue()
{
	return HexenDefs::game_dm;
}

bool SetNewValue(int newValue)
{
	if (Level)
		MenuChoice_Level(Level).InitMapList(newValue);
	MenuChoice_Monsters(Monsters).InitMonsters(newValue);
	return ::SetNewValue(newValue);
}

defaultproperties
{
	Text = "Game type";
	EnumNames[HexenDefs::game_sweep] = "Castle Sweep";
	EnumNames[HexenDefs::game_kth] = "Kill the Heresiarch";
	EnumNames[HexenDefs::game_dm] = "Deathmatch";
	EnumNames[HexenDefs::game_dmteam] = "Team Deathmatch";
	EnumNames[HexenDefs::game_ctf] = "Capture The Flag";
	EnumNames[HexenDefs::game_football] = "Football";
	EnumNames[HexenDefs::game_sweepteam] = "Team Castle Sweep";
}
