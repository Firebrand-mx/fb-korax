	switch(MSG_ReadByte())
	{
	case HexenDefs::lsid_kth_an_awaiting: sndName = 'KTH_AwaitingForHeresiarch'; break;
	case HexenDefs::lsid_kth_an_ishere: sndName = 'KTH_HeresiarchIsHere'; break;
	case HexenDefs::lsid_kth_an_hasreborn: sndName = 'KTH_HeresiarchIsReborn'; break;
	case HexenDefs::lsid_kth_an_isdown: sndName = 'KTH_HeresiarchIsDown'; break;
	case HexenDefs::lsid_kth_mus_death: sndName = 'KTH_HeresiarchMusDeath'; break;
	case HexenDefs::lsid_kth_mus_birth: sndName = 'KTH_HeresiarchMusBirth'; break;

	default: sndName = 'misc/chat'; break;
	}

	put_in_queue = MSG_ReadByte();

	if (put_in_queue && Announcer)
		Announcer.QueueSound(sndName, itof(MSG_ReadShort()) / 100.0);
	else
	{
		MSG_ReadShort();
		LocalSound(sndName);
	}
}

//==========================================================================
//
//  ParseDynamicLightEx
//
//	[CW] Full data dlight parsing
//
//==========================================================================

void ParseDynamicLightEx()
{
	dlight_t *dl;

	dl = AllocDlight(0);

	dl->colour = MSG_ReadLong();
	dl->origin.x = itof(MSG_ReadShort());
	dl->origin.y = itof(MSG_ReadShort());
	dl->origin.z = itof(MSG_ReadShort());
	dl->radius = itof(MSG_ReadShort());
	dl->die = time + itof(MSG_ReadShort()) * 0.01;
	dl->decay = itof(MSG_ReadShort()) * 0.01;
}

//==========================================================================
//
//  ParseServerCommand
//
//==========================================================================

bool ParseServerCommand(int cmd_type)
{
	switch (cmd_type)
	{
	case HexenDefs::svc_gun_shot:
		ParseGunShot();
		break;

	case HexenDefs::svc_blood:
		ParseBlood();
		break;

	case HexenDefs::svc_explosion:
		ParseExplosion();
		break;

// [Korax]
	case HexenDefs::svc_explosion2:
		ParseExplosion2();
		break;

	case HexenDefs::svc_chunks:
		ParseIceChunks();
		break;

	case HexenDefs::svc_fov:
		SetCvar('FOV', MSG_ReadByte());
		break;

	case HexenDefs::svc_teamselect:
		ParseTeamSelect();
		break;

	case HexenDefs::svc_scoreboard:
		if (MSG_ReadByte())
			GScBoard.Show();
		else
			GScBoard.Hide();
		break;

	case HexenDefs::svc_localsound:
		ParseLocalSound();
		break;

	case HexenDefs::svc_dlight:			// currently unused
		break;

	case HexenDefs::svc_dlightex:
		ParseDynamicLightEx();
		break;

	default:
		return false;
	}
	return true;
}

//==========================================================================
//
//  UpdateParticle
//
//==========================================================================

void UpdateParticle(particle_t * p, float DeltaTime)
{
	float time1, time2, time3;
	float dvel;
	float grav;
	int c;
	
	time1 = DeltaTime * 5.0;
	time2 = DeltaTime * 10.0;	// 15;
	time3 = DeltaTime * 15.0;

	dvel = DeltaTime * 4.0;
	grav = DeltaTime * 1.0 * 0.05; //frametime * sv_gravity.value * 0.05;

	switch (p->type)
	{
	case pt_static:
		break;

	case pt_explode:
		p->ramp += time2;
		if (p->ramp >= 16.0)
			p->die = -1.0;
		else
			p->colour = ramp1[ftoi(p->ramp)];
		p->vel.x += p->vel.x * dvel;
		p->vel.y += p->vel.y * dvel;
		p->vel.z += p->vel.z * dvel;
		p->vel.z -= grav;
		break;

	case pt_explode2:
		p->ramp += time3;
		if (p->ramp >= 16.0)
			p->die = -1.0;
		else
			p->colour = ramp2[ftoi(p->ramp)];
		p->vel.x -= p->vel.x * DeltaTime;
		p->vel.y -= p->vel.y * DeltaTime;
		p->vel.z -= p->vel.z * DeltaTime;
		p->vel.z -= grav;
		break;

	case pt_chunks:
		p->ramp += time1;
		if (p->ramp >= 16.0)
			p->die = -1.0;
		else
		c = P_Random() >> 1; 
		p->colour = RGB(c, c, c);
		p->vel.x += p->vel.x * dvel / 2.0;
		p->vel.y += p->vel.y * dvel / 2.0;
		p->vel.z += p->vel.z * dvel / 2.0;
		p->vel.z -= grav;
		break;

	case pt_chunks2:
		p->ramp += time2;
		if (p->ramp >= 16.0)
			p->die = -1.0;
		else
		c = P_Random() >> 1;
		p->colour = RGB(c, c, c);
		p->vel.x -= p->vel.x * DeltaTime / 2.0;
		p->vel.y -= p->vel.y * DeltaTime / 2.0;
		p->vel.z -= p->vel.z * DeltaTime / 2.0;
		p->vel.z -= grav;
		break;
	}
}

//==========================================================================
//
//  UpdateMobj
//
//==========================================================================

void UpdateMobj(Entity mobj, int key, float DeltaTime)
{
	dlight_t *dl;
	TVec fv;
	int i, c, count;
	particle_t *p;

	switch (mobj.Effects & HexenDefs::EF_DLIGHT_MASK)
	{
	case HexenDefs::EF_DL_NONE:
		break;

	case HexenDefs::EF_DL_WHITE:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->radius = 200.0;
		dl->colour = RGB(255, 255, 255);
		dl->die = time + 0.1;
		break;

	case HexenDefs::EF_DL_RED:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->radius = 200.0;
		dl->colour = RGB(255, 0, 0);
		dl->die = time + 0.1;
		break;

	case HexenDefs::EF_DL_GREEN:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->radius = 200.0;
		dl->colour = RGB(0, 255, 0);
		dl->die = time + 0.1;
		break;

	case HexenDefs::EF_DL_BLUE:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->radius = 200.0;
		dl->colour = RGB(0, 0, 255);
		dl->die = time + 0.1;
		break;

	case HexenDefs::EF_DL_DARK:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->radius = 200.0;
		dl->colour = RGB(1, 1, 1);
		dl->die = time + 0.1;
		break;

	case HexenDefs::EF_DL_ROCKET:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->radius = 200.0;
		dl->colour = RGB(255, 255, 255);
		dl->die = time + 0.1;

		count = ftoi(DeltaTime * 256.0);
		for (i = 0; i < count; i++)
		{
			p = NewParticle();
			if (!p)
				return;

			p->org = mobj.Origin;
			c = P_Random() >> 1;
			p->colour = RGB(c, c, c);
			p->die = time + 0.5 * Random();
			p->type = pt_static;
			p->vel.x = 16.0 * (Random() - 0.5);
			p->vel.y = 16.0 * (Random() - 0.5);
			p->vel.z = 16.0 * (Random() - 0.5);
		}
		break;

	case HexenDefs::EF_DL_MUZZLEFLASH:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->origin.z += 48.0;
		AngleVector(&mobj.Angles, &fv);

		dl->origin = dl->origin + 18.0 * fv;
		dl->radius = 200.0 + Random() * 31.0;
		dl->colour = 0xffffffff;
		dl->minlight = 32.0;
		dl->die = time + 0.1;
	}
}

