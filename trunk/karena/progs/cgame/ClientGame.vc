//==========================================================================
//
//  ParseTeamSelect
//
//==========================================================================

void ParseTeamSelect()
{
	int i;
	bool created;
	created = false;

	if (TeamSelectScreen == none)
	{
		TeamSelectScreen = MenuScreenTeamSelect(SpawnMenu(MenuScreenTeamSelect));
		created = true;
	}
	TeamSelectScreen.maxTeams = MSG_ReadByte();
	TeamSelectScreen.activeTeams = MSG_ReadByte();

	for (i = 0; i < TeamSelectScreen.activeTeams; i++)
	{
		TeamSelectScreen.Teams[i] = MSG_ReadByte();
	}

	if (created)
	{
		TeamSelectScreen.curSelection = MSG_ReadByte();
		TeamSelectScreen.Ready = true;
		TeamSelectScreen.CreateChoices();
		PushMenuScreen(TeamSelectScreen);
	}
	else
		TeamSelectScreen.ReInit();
}

