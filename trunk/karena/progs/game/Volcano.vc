class Volcano : Decoration
	__mobjinfo__(15015);

//==========================================================================
//
//  A_VolcanoSet
//
//==========================================================================

final void A_VolcanoSet()
{
	StateTime = 3.0 + Random() * 3.5;
}

//==========================================================================
//
//  A_VolcanoBlast
//
//==========================================================================

final void A_VolcanoBlast()
{
	int i;
	int count;
	Actor blast;
	float angle;

	count = 1 + (P_Random() % 3);
	for (i = 0; i < count; i++)
	{
		blast = Spawn(VolcanoBlast, Origin + vector(0.0, 0.0, 44.0));
		blast.Instigator = self;
		angle = Random() * 360.0;
		blast.Angles.yaw = angle;
		blast.Velocity.x = cos(angle) * 35.0;
		blast.Velocity.y = sin(angle) * 35.0;
		blast.Velocity.z = (7.5 + Random() * 12.0) * 35.0;
		blast.PlaySound('VolcanoBlast', CHAN_VOICE);
		blast.CheckMissileSpawn();
	}
}

__states__
{
	S_VOLCANO1('VLCO', 0, 350.0 / 35.0, S_VOLCANO2) = none
	S_VOLCANO2('VLCO', 0, 35.0 / 35.0, S_VOLCANO3) = A_VolcanoSet
	S_VOLCANO3('VLCO', 1, 3.0 / 35.0, S_VOLCANO4) = none
	S_VOLCANO4('VLCO', 2, 3.0 / 35.0, S_VOLCANO5) = none
	S_VOLCANO5('VLCO', 3, 3.0 / 35.0, S_VOLCANO6) = none
	S_VOLCANO6('VLCO', 1, 3.0 / 35.0, S_VOLCANO7) = none
	S_VOLCANO7('VLCO', 2, 3.0 / 35.0, S_VOLCANO8) = none
	S_VOLCANO8('VLCO', 3, 3.0 / 35.0, S_VOLCANO9) = none
	S_VOLCANO9('VLCO', 4, 10.0 / 35.0, S_VOLCANO2) = A_VolcanoBlast
}

defaultproperties
{
	Radius = 12.0;
	Height = 20.0;
	bSolid = true;
	IdleState = S_VOLCANO1;
}
