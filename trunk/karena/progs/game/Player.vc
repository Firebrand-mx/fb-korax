//==========================================================================
//
//	BestWeaponOfDamageType
//
//	Returns best weapon to use of selected DamageType
//
//	[CW] a slightly modified version of PlayerEx::BestWeapon,
//		added DamageType check and disabled Powered check
//
//==========================================================================

Weapon BestWeaponOfDamageType(name DamageType, optional class<Ammo> AmmoType)
{
	//bool Powered = !!EntityEx(MO).FindInventory(PowerWeaponLevel2);
	Weapon Best = none;
	Inventory Item;
	for (Item = EntityEx(MO).Inventory; Item; Item = Item.Inventory)
	{
		//	Must be a KArena weapon
		KArenaWeapon Wpn = KArenaWeapon(Item);
		if (!Wpn)
		{
			continue;
		}

		if (Wpn.DamageTypeHint != DamageType)
			continue;

		//	Check if best one is better that this one.
		if (Best && Wpn.SelectionOrder > Best.SelectionOrder)
		{
			continue;
		}
		//	Possibly limit to specific ammo type.
		if (AmmoType && Wpn.AmmoType1 != AmmoType)
		{
			continue;
		}
		/* // Check if it's for the current tome of power state.
		if (Powered && Wpn.SisterWeapon && Wpn.SisterWeapon.bPoweredUp)
		{
			continue;
		}*/
		/* if (!Powered && Wpn.bPoweredUp)
		{
			continue;
		}*/
		//	Make sure it has enough ammo.
		if (!Wpn.CheckAmmo(Weapon::FIRE_Either, false))
		{
			continue;
		}
		//	Good one.
		Best = Wpn;
	}
	return Best;
}

//==========================================================================
//
// IsOutOfAmmo
//
// [CW] Returns TRUE if cannot attack with any weapon that requires ammo
//
//==========================================================================

bool IsOutOfAmmo(optional class<KArenaWeapon> WeaponClass, optional class<Ammo> AmmoType,
				 optional bool bAlternativeWeapons)
{
	Inventory Item;
	for (Item = EntityEx(MO).Inventory; Item; Item = Item.Inventory)
	{
		if (!WeaponClass && (
			((bAlternativeWeapons || AmmoType == ArtifactFlechette) &&
			Item.Class == ArtifactFlechette) ||
			((bAlternativeWeapons || AmmoType == ArtifactBlastRadius) &&
			Item.Class == ArtifactBlastRadius)
			))
		{
			if (Item.Amount > 0)
				return false;
		}
		else
		{
			//	Must be a weapon
			KArenaWeapon Wpn = KArenaWeapon(Item);
			if (!Wpn)
			{
				continue;
			}

			if (WeaponClass)
			{
				if (Wpn.Class != WeaponClass)
					continue;
			}

			if (AmmoType)
			{
				if (Wpn.AmmoType1 != AmmoType && Wpn.AmmoType2 != AmmoType && Wpn.AmmoType3 != AmmoType)
					continue;
			}

			if (Wpn.CheckAmmo(Weapon::FIRE_Either, false, true))
				return false;
		}
	}
	return true;
}

//==========================================================================
//
// IsAmmoBelowLevel
//
//==========================================================================

bool IsAmmoBelowLevel(int AmountLimit, optional class<KArenaWeapon> WeaponClass, optional class<Ammo> AmmoType,
					  optional bool bAlternativeWeapons)
{
	Inventory Item;
	for (Item = EntityEx(MO).Inventory; Item; Item = Item.Inventory)
	{
		//	Must be an Ammo
		Ammo ammo = Ammo(Item);
		if (!ammo)
		{
			continue;
		}

		if (WeaponClass)
		{
			if (WeaponClass.default.AmmoType1 != ammo.Class &&
					WeaponClass.default.AmmoType2 != ammo.Class &&
					WeaponClass.default.AmmoType3 != ammo.Class)
				continue;
		}

		if (AmmoType)
		{
			if (ammo.Class != AmmoType)
				continue;
		}

		if (bAlternativeWeapons)
		{
			if (ammo.Class != ArtifactFlechette &&
					ammo.Class != ArtifactBlastRadius)
				continue;
		}

		if (ammo.Amount >= AmountLimit)
			return false;
	}
	return true;
}

//==========================================================================
//
// IsOKToPickupItem
//
//	[CW] move to bot ai?
//
//==========================================================================

bool IsOKToPickupItem(Inventory Item)
{
	class<Inventory> realClass;
	name parent_class;

	if (Item.Class == RandomPowerup)
	{
		realClass = RandomPowerup(Item).PowerupClass;
	}
	else
	{
		realClass = class<Inventory>(Item.Class);
	}

#ifdef DEBUG_BOT_AI_ITEMS
	print("IsOKToPickupItem : %n?", GetClassName(Item.Class));
	print("Item.MaxAmount = : %i", Item.MaxAmount);
#endif

	//
	// [CW] Mana, health and armor classes are all stored as items of
	//      their corresponding parent class, hence we must seek
	//		for parent class, not for exactly the class of item we are
	//		checking. Plus, some items should be tested differently.
	//

	if (Item.IsA('Health') || realClass == KArenaSuperHeal)
	{
		// [CW] Health is tested differently
		if (EntityEx(MO).CheckInventory('health') < max_health)
		{
			return true;
		}
		return false;
	}
	else if (Item.IsA('Armor') || realClass == KArenaArmor5)
	{
		// [CW] Armor is tested differently
		BasicArmor Armor = BasicArmor(EntityEx(MO).FindInventory(BasicArmor));
		if (Armor.Amount < /* ArmorPickup(Item). */class<ArmorPickup>(realClass).default.MaxSaveAmount)
			return true;
		return false;
	}
	else if (Item.IsA('ItemManaBlue'))
	{
		parent_class = 'Mana1';
	}
	else if (Item.IsA('ItemManaGreen'))
	{
		parent_class = 'Mana2';
	}
	else if (Item.IsA('ItemManaRed'))
	{
		parent_class = 'ItemManaRed';
	}
	else if (Item.IsA('ItemManaCombined') || realClass == ArtifactBoostMana)
	{
		// [CW] Combined mana and BoostMana are tested differently
		if (EntityEx(MO).CheckInventory('Mana1') < ItemManaBlue.default.MaxAmount ||
			EntityEx(MO).CheckInventory('Mana2') < ItemManaGreen.default.MaxAmount ||
			EntityEx(MO).CheckInventory('ItemManaRed') < ItemManaRed.default.MaxAmount)
		{
			return true;
		}
		return false;
	}
	else if (Item.IsA('WeaponPickup'))
	{
		class RealWeaponClass = KArenaPlayerPawn(MO).WeaponClasses[WeaponPickup(Item).Slot - 1];
		KArenaWeapon RealWeaponItem = KArenaWeapon(EntityEx(MO).FindInventory(class<Inventory>(RealWeaponClass)));

#ifdef DEBUG_BOT_AI_ITEMS
		print("WeaponPickup = %n", GetClassName(Item.Class));
		print("RealWeaponClass = %n", GetClassName(RealWeaponClass));
		print("RealWeaponItem = %i", RealWeaponItem);
#endif
		// [CW] Weapon is tested differently
		if (!RealWeaponItem)
			return true;	// no such weapon yet

#ifdef DEBUG_BOT_AI_ITEMS
		print("has weapon");
#endif

		if (RealWeaponItem.AmmoType1)
		{
			if (ClassIsChildOf(RealWeaponItem.AmmoType1, ItemManaBlue) &&
				EntityEx(MO).CheckInventory('Mana1') < ItemManaBlue.default.MaxAmount ||
				ClassIsChildOf(RealWeaponItem.AmmoType1, ItemManaGreen) &&
				EntityEx(MO).CheckInventory('Mana2') < ItemManaGreen.default.MaxAmount ||
				ClassIsChildOf(RealWeaponItem.AmmoType1, ItemManaRed) &&
				EntityEx(MO).CheckInventory('ItemManaRed') < ItemManaRed.default.MaxAmount)
			{
				return true;
			}
		}
		if (RealWeaponItem.AmmoType2)
		{
			if (ClassIsChildOf(RealWeaponItem.AmmoType2, ItemManaBlue) &&
				EntityEx(MO).CheckInventory('Mana1') < ItemManaBlue.default.MaxAmount ||
				ClassIsChildOf(RealWeaponItem.AmmoType2, ItemManaGreen) &&
				EntityEx(MO).CheckInventory('Mana2') < ItemManaGreen.default.MaxAmount ||
				ClassIsChildOf(RealWeaponItem.AmmoType2, ItemManaRed) &&
				EntityEx(MO).CheckInventory('ItemManaRed') < ItemManaRed.default.MaxAmount)
			{
				return true;
			}
		}
		if (RealWeaponItem.AmmoType3)
		{
			if (ClassIsChildOf(RealWeaponItem.AmmoType3, ItemManaBlue) &&
				EntityEx(MO).CheckInventory('Mana1') < ItemManaBlue.default.MaxAmount ||
				ClassIsChildOf(RealWeaponItem.AmmoType3, ItemManaGreen) &&
				EntityEx(MO).CheckInventory('Mana2') < ItemManaGreen.default.MaxAmount ||
				ClassIsChildOf(RealWeaponItem.AmmoType3, ItemManaRed) &&
				EntityEx(MO).CheckInventory('ItemManaRed') < ItemManaRed.default.MaxAmount)
			{
				return true;
			}
		}
		return false;
	}
	else if (!Item.MaxAmount)
	{
		// [CW] May happen because of faster tick rate
		if (Item.Class == InitialInvulnerability)
		{
			return false;
		}

		// [CW] must be some instant use artifact (?)
		return true;
	}
	else
	{
		parent_class = GetClassName(Item.Class);
	}

	//if (EntityEx(MO).CheckInventory(parent_class) < Item.MaxAmount)
	int amount;
	Inventory RealItem;
	class<Inventory> RealItemClass = class<Inventory>(FindClass(parent_class));
	if (RealItemClass)
	{
		RealItem = EntityEx(MO).FindInventory(RealItemClass);
		amount = (RealItem ? RealItem.Amount : 0);
	}
	
	if (amount < (RealItem ? RealItem.MaxAmount : Item.MaxAmount))
	{
		return true;
	}

	return false;
}

