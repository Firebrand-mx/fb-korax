void SpawnSpectator(mthing_t * mthing, bool AllowRespawn)
{
#ifdef DEBUG_PLAYER_SPAWN
	print("Player::SpawnSpectator :");
#endif
	float				x;
	float				y;
	float				z;
	PlayerPawn			PP;

	if (PlayerState == PST_REBORN)
	{
		PlayerReborn();
	}

	PClass = HexenDefs::PCLASS_SPECTATOR;

	x = mthing->x;
	y = mthing->y;
	z = Actor::ONFLOORZ;
	
	PP = Level.Spawn(class<PlayerPawn>(PlayerSpectator),
		vector(x, y, z),,, false);
	PP.Origin.z += mthing->height;
	PP.LinkToWorld();
	PP.FriendPlayer = GetPlayerNum() + 1;	//	Players are their own friends.

	PP.Angles.yaw = itof(45 * (mthing->angle / 45));
	PP.Player = self;
	PP.bIsPlayer = true;
	PP.Health = Health;
	MO = PP;
	Camera = PP;
	ViewHeight = PP.ViewHeight;
	ViewOrg = MO.Origin;
	ViewOrg.z += ViewHeight;
	ViewAngles = PP.Angles;
	bFixAngle = true;

	ResetPlayerOnSpawn();

	// remove all psprites
	int i;
	for (i = 0; i < NUMPSPRITES; i++)
	{
		SetViewState(i, none);
	}

	// wake up the status bar
	SB_Start();

	// ?? need this here?
	//SetClientModel();

	EntityEx(MO).GiveInventoryType(PowerSpectatorFlight);
	UpdateRevealedMap();

	bSpectator = true;
	bAllowEndSpectate = AllowRespawn;
}

