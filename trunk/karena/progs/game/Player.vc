void PlayerMorphed(EntityEx OldMO)
{
	PClass = HexenDefs::PCLASS_PIG;
	// [CW] Recalc attributes based on the new player's body
	int bak_level = exp_level;
	InitiateLevel();
	ActivateLevel(bak_level, false);
}

