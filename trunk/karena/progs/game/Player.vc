//==========================================================================
//
//  DeathMatchSpawnPlayer
//
//  Spawns a player at one of the random death match spots called at level
// load and each death
//
//==========================================================================

void DeathMatchSpawnPlayer()
{
	int i;
	int j;

	// [CW] CTF and Football special rule
	if (Team /* must already have a Team, otherwise pointless */
		&& (MainGameInfo(Level.Game).GameType == HexenDefs::game_ctf
			|| MainGameInfo(Level.Game).GameType == HexenDefs::game_football))
	{
		bool enough = false;
		j = 0;
		while(true)
		{
			if (enough)
			{
				if (j == Level.DeathmatchStarts.Num)
					break; // ah! just go spawn where you can, oh unlucky one...
				i = j;
			}
			else
				i = P_Random() % Level.DeathmatchStarts.Num;

#ifdef DEBUG_PLAYER_SPAWN
			print("Level.DeathmatchStarts[i].type = %i", Level.DeathmatchStarts[i].type);
#endif
			if (Level.DeathmatchStarts[i].type != 11 /* common */ &&
				((Level.DeathmatchStarts[i].type == 15040 /*aka Blue*/ &&
					Team.T2 == PlayerTeam::TEAM2_INDEX_BLUE) ||
				(Level.DeathmatchStarts[i].type == 15041 /*aka Red*/ &&
					Team.T2 == PlayerTeam::TEAM2_INDEX_RED)))
			{
				if (CheckSpot(&Level.DeathmatchStarts[i]))
				{
#ifdef DEBUG_PLAYER_SPAWN
					print("spawning at team location");
#endif
					SpawnPlayer(&Level.DeathmatchStarts[i], false);
					return;
				}
			}

			j++;
			if (!enough && j > 20)
			{
				enough = true;
				j = 0;
			}
		};
	}
	
	for (j = 0; j < 20; j++)
	{
		i = P_Random() % Level.DeathmatchStarts.Num;
		if (CheckSpot(&Level.DeathmatchStarts[i]))
		{
#ifdef DEBUG_PLAYER_SPAWN
			print("spawning tested at random deathmatch location");
#endif
			SpawnPlayer(&Level.DeathmatchStarts[i], false);
			return;
		}
	}
	
	// no good spot, so the player will probably get stuck
#ifdef DEBUG_PLAYER_SPAWN
	print("spawning blind at random deathmatch location");
#endif
	SpawnPlayer(&Level.DeathmatchStarts[P_Random() % Level.DeathmatchStarts.Num], false);
}

//==========================================================================
//
//  SpawnPlayer
//
//  Called when a player is spawned on the level. Most of the player
// structure stays unchanged between levels.
//
//==========================================================================

void SpawnPlayer(mthing_t * mthing, bool Voodoo)
{
#ifdef DEBUG_PLAYER_SPAWN
	print("Player::SpawnPlayer :");
#endif

	// TODO: Checkme - what about Voodoo flag?
	if (bRespawnAsSpectator || 
		!bIsBot && MainGameInfo(Level.Game).GameType >= HexenDefs::NUMGAMESNOTEAM && !Team)
	{
#ifdef DEBUG_PLAYER_SPAWN
		print("spawn spectator : forced %i, allowend %i", bRespawnAsSpectator, bAllowEndSpectate);
#endif
		SpawnSpectator(mthing, bRespawnAsSpectator ? bAllowEndSpectate : true);
		bRespawnAsSpectator = false;
	}
	else
	{
#ifdef DEBUG_PLAYER_SPAWN
	print("spawn normal");
#endif
		bSpectator = false;
		::SpawnPlayer(mthing, Voodoo);
	}

#ifdef DEBUG_PLAYER_SPAWN
	print("SpawnPlayer : 2");
#endif

	//
	// [CW] if the trophy data should be stored, do it here
	//
	Trophies.kills_at_once = 0;
	Trophies.kao_timer = 0.0;
	Trophies.frags_at_once = 0;
	Trophies.fao_timer = 0.0;
	Trophies.frags_row = 0;
	Trophies.kills_row = 0;

#ifdef DEBUG_PLAYER_SPAWN
	print("SpawnPlayer : 3");
#endif

	// [FB] There's a penalty for dying; you lost some experience
	if(inited && PlayerState == PST_LIVE)
	{
		// [CW] recalc attributes if needed
		if (bRecalculateLevelOnRespawn)
		{
			int bak_level;

			bRecalculateLevelOnRespawn = false;
			bak_level = exp_level;
			InitiateLevel();
			ActivateLevel(bak_level, false);
		}

		experience -= (200 * exp_level);
		if(experience < 0)
		{
			experience = 0; // [FB] We don't want to have negative experience, right?
		}

		KArenaPlayerPawn(MO).experience = experience;

		// [FB] But what if the experience we lost has made us lost a level??
		//	Then we use the old_level value to compare our current experience,
		//	if it is lower to it, then we activate a level less than
		//	our current one
		while(experience < old_level && exp_level >= 1)
		{
			DeactivateLevel(exp_level - 1, true); // [FB] Update Stats accordingly
		}
	}

#ifdef DEBUG_PLAYER_SPAWN
	print("SpawnPlayer : 4");
#endif

	if (!bSpectator)
	{
		if (bUnControllable)
			EntityEx(MO).Deactivate(none);

		// [CW] if there is advanced game mode initiated, notify it of player spawn
		if (MainGameInfo(Level.Game).GameModel)
			MainGameInfo(Level.Game).GameModel.OnPlayerSpawn(self);

		// [FB] Destroy all things touching players
		Actor(MO).TeleportMove(MO.Origin);
	}
#ifdef DEBUG_PLAYER_SPAWN
	print("SpawnPlayer : 5");
#endif
}

