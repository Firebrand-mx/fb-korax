			{
				// [CW] Choose one of the existing teams that is available for joining
				if (Game.Teams[i] == none)
					break;
				if (Game.Teams[i].GetPlayerCount() <= count_limit)
				{
					new_index = Game.Teams[i].Index;
					break;
				}
			}

			if (new_index < 0)
			{
				dprint("Player::AutoSelectTeam : EEE 211");
