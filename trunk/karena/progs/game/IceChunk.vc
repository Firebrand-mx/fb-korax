class IceChunk : Effect;

//============================================================================
//
//	A_IceSetTics
//
//============================================================================

final void A_IceSetTics()
{
	VTerrainInfo* floor;

	StateTime = 2.0 + Random() * 2.0;
	floor = GetFloorType();
	if (floor->DamageType == 'lava')
	{
		StateTime /= 4.0;
	}
	else if (floor->DamageType == 'ice')
	{
		StateTime *= 2.0;
	}
}

__states__
{
	S_ICECHUNK1('ICEC', 0, 10.0 / 35.0, S_ICECHUNK2) = none
	S_ICECHUNK2('ICEC', 1, 10.0 / 35.0, S_ICECHUNK3) = A_IceSetTics
	S_ICECHUNK3('ICEC', 2, 10.0 / 35.0, S_ICECHUNK4) = A_IceSetTics
	S_ICECHUNK4('ICEC', 3, 10.0 / 35.0, none) = A_IceSetTics
}

defaultproperties
{
	Radius = 3.0;
	Height = 4.0;
	Mass = 12.5;
	bDropOff = true;
	bFloorClip = true;
	bCannotPush = true;
	bNoGravity = false;
	IdleState = S_ICECHUNK1;
}
