class MageBoss : ClassBoss
	__mobjinfo__(10102);

//==========================================================================
//
//  MStaffSpawn2
//
//==========================================================================

void MStaffSpawn2(float angle)
{
	EntityEx mo;

	mo = SpawnMissileAngle(MageStaffFX2, angle, 0.0, 40.0);
	if (mo)
	{
		mo.Target = self;
		mo.Tracer = Actor(mo.RoughMonsterSearch(10));
	}
}

//==========================================================================
//
//  A_MageAttack
//
//==========================================================================

final void A_MageAttack()
{
	if (!Target)
		return;

	MStaffSpawn2(Angles.yaw);
	MStaffSpawn2(AngleMod360(Angles.yaw - 5.0));
	MStaffSpawn2(AngleMod360(Angles.yaw + 5.0));
	PlaySound('MageStaffFire', CHAN_WEAPON);
}

//==========================================================================
//
//	A_MageBurnScream
//
//==========================================================================

final void A_MageBurnScream()
{
	PlaySound('PlayerMageBurnDeath', CHAN_VOICE);
}

