class SerpentLeader : Serpent
	__mobjinfo__(120)
	__scriptid__(7);

//==========================================================================
//
//	A_SerpentMissileAttack
//
//==========================================================================

final void A_SerpentMissileAttack()
{
	if (!Target)
	{
		return;
	}
	SpawnMissile(Target, SerpentFX);
}

states
{
Missile:
	SSPT N 5 A_SerpentMissileAttack
	Goto Super::Melee+5
}

defaultproperties
{
	Mass = 200.0;
	Obituary = "$ob_stalkerleader";
	HitObituary = "$ob_stalkerleaderhit";
}
