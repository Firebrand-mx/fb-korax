class WeaponPiece : Pickup
	abstract;

const int
	WPIECE1			= 1,
	WPIECE2			= 2,
	WPIECE3			= 4;

int PieceClass;
int PieceValue;

//==========================================================================
//
//  TouchSpecial
//
//==========================================================================

void TouchSpecial(Actor Toucher)
{
	bool remove;
//	bool checkAssembled;
//	bool gaveWeapon;
	int gaveMana;

	if (!Toucher.bPickUp)
	{
		// Can't be picked up by toucher
		return;
	}
	if (Toucher.Health <= 0)
	{
		// Toucher is dead
		return;
	}
	remove = true;
//	checkAssembled = true;
//	gaveWeapon = false;
	if (Toucher.Player.PClass != PieceClass)
	{
		// Wrong class, but try to pick up for mana
		if (Level.Game.netgame && !Level.Game.deathmatch)
		{
			// Can't pick up wrong-class weapons in coop netplay
			return;
		}
//		checkAssembled = false;
		gaveMana = Player(Toucher.Player).GiveMana(HexenDefs::MANA_123, 20);
		if (!gaveMana)
		{
			// Didn't need the mana, so don't pick it up
			return;
		}
	}
	else if (Level.Game.netgame && !Level.Game.deathmatch)
	{
		// Cooperative net-game
//[Korax]
/*				if (Player(Toucher.Player).Pieces & PieceValue)
		{
			// Already has the piece
			return;
		}*/
		PieceValue = MainGameInfo(Level.Game).pieceValueTrans[PieceValue];
		Player(Toucher.Player).GiveMana(HexenDefs::MANA_123, 20);
		remove = false;
	}
	else
	{
		// Deathmatch or single player game
		gaveMana = Player(Toucher.Player).GiveMana(HexenDefs::MANA_123, 20);
//[Korax]
//		if (Player(Toucher.Player).Pieces & PieceValue)
//		{
			// Already has the piece, check if mana needed
			if (!gaveMana)
			{
				// Didn't need the mana, so don't pick it up
				return;
			}
//			checkAssembled = false;
//		}
	}

	// Pick up the weapon piece
	if (Special)
	{
		Level.ExecuteActionSpecial(Special, Args[0], Args[1], Args[2], Args[3],
			Args[4], NULL, 0, Toucher);
		Special = 0;
	}
	if (remove)
	{
		if (Level.Game.deathmatch && !bDropped)
		{
			HideSpecial();
		}
		else
		{
			Destroy();
		}
	}
	Player(Toucher.Player).BonusFlash += BONUSADD;

	// Check if fourth weapon assembled
/*	if (checkAssembled)
	{
		Player(Toucher.Player).Pieces |= PieceValue;
		if (Player(Toucher.Player).Pieces == (WPIECE1 | WPIECE2 | WPIECE3))
		{
			gaveWeapon = true;
			Player(Toucher.Player).WeaponOwned[HexenDefs::WP_FOURTH] = true;
			Player(Toucher.Player).PendingWeapon = HexenDefs::WP_FOURTH;
		}
	}

	if (gaveWeapon)
	{
		Toucher.Player.cprint(MainGameInfo(Level.Game).fourthWeaponText[PieceClass]);
		// Play the build-sound full volume for all players
		Toucher.PlaySound('WeaponBuild', CHAN_ITEM, 1.0, ATTN_NONE);
	}
	else
*/	{
		Toucher.Player.cprint(MainGameInfo(Level.Game).weaponPieceText[PieceClass]);
		Toucher.PlaySound('PickupWeapon', CHAN_ITEM, 1.0, ATTN_NONE);	//FIXME must be PickupPiece
	}
}

defaultproperties
{
	bFloatBob = true;
}
