class Ripper : Projectile;

states
{
Spawn:
	FX18 M 4
	FX18 N 5
	Loop
Death:
	FX18 OPQRS 4 Bright
	Stop
}

defaultproperties
{
	Radius = 8.0;
	Height = 6.0;
	Speed = 490.0;
	MissileDamage = 1;
	bRip = true;
	bActivateImpact = true;
	DeathSound = 'SkullRodHit';
	Obituary = "$ob_blaster";

	bNoAccuracy = true;
}
