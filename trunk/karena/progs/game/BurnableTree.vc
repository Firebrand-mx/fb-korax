class BurnableTree : Decoration
	abstract;

//===========================================================================
//
//  A_TreeDeath
//
//===========================================================================

final void A_TreeDeath()
{
	if (DamageType == 'Fire')
	{
		int i;

		for (i = 0; i < MAXPLAYERS; i++)
		{
			if (!Level.Game.Players[i])
				continue;
			if (!Level.Game.Players[i].bSpawned)
				continue;
			PlayerEx(Level.Game.Players[i]).ParticleEffect(20, LineSpecialLevelInfo::pt_static, 0, Origin, 10.0,
					vector(384.0, 384.0, 256.0), 0.3, 20.0, 85.0, RGB(255, 128, 0), 1.0, 2.0);
		}

		SetState(MeleeState);
		bDynamicLight = true;
		DLightColour = RGB(255, 127, 0);
		DLightRadius = 86.0;
		SendExplosion(DLightColour, DLightRadius, Origin);
		return;
	}
	else
	{
		Height *= 4.0;
		bShootable = true;
		bDropOff = false;
		bCorpse = false;
		Health = 35;		
	}
}

defaultproperties
{
	Mass = 99999.0;
	bSolid = true;
	bShootable = true;
	bNoBlood = true;
}
