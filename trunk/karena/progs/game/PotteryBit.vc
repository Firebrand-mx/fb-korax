class PotteryBit : Fragment;

state BitState;

//==========================================================================
//
//  A_PotteryChooseBit
//
//==========================================================================

final void A_PotteryChooseBit()
{
	switch (P_Random() % 5)
	{
	case 0: BitState = S_POTTERYBIT_EX1; break;
	case 1: BitState = S_POTTERYBIT_EX2; break;
	case 2: BitState = S_POTTERYBIT_EX3; break;
	case 3: BitState = S_POTTERYBIT_EX4; break;
	case 4: BitState = S_POTTERYBIT_EX5; break;
	}
	SetState(BitState);
	StateTime = 8.0 + Random() * 16.0;
}

//==========================================================================
//
//  A_PotteryCheck
//
//==========================================================================

final void A_PotteryCheck()
{
	int i;
	Actor pmo;

	for (i = 0; i < MAXPLAYERS; i++)
	{
		if (!Level.Game.Players[i] || !Level.Game.Players[i].bSpawned)
		{
			continue;
		}
		pmo = Actor(Level.Game.Players[i].MO);
		if (CanSee(pmo) && (fabs(AngleMod180(atan2(Origin.y - pmo.Origin.y,
			Origin.x - pmo.Origin.x) - pmo.Angles.yaw)) <= 45.0))
		{
			// Previous state (pottery bit waiting state)
			SetState(BitState);
			return;
		}
	}
}

__states__
{
	S_POTTERYBIT_1('PBIT', 0, -1.0, none) = none
	S_POTTERYBIT_2('PBIT', 1, -1.0, none) = none
	S_POTTERYBIT_3('PBIT', 2, -1.0, none) = none
	S_POTTERYBIT_4('PBIT', 3, -1.0, none) = none
	S_POTTERYBIT_5('PBIT', 4, -1.0, none) = none
	S_POTTERYBIT_EX0('PBIT', 5, 0.0 / 35.0, none) = A_PotteryChooseBit
	S_POTTERYBIT_EX1('PBIT', 5, 140.0 / 35.0, S_POTTERYBIT_EX1_2) = none
	S_POTTERYBIT_EX1_2('PBIT', 5, 1.0 / 35.0, none) = A_PotteryCheck
	S_POTTERYBIT_EX2('PBIT', 6, 140.0 / 35.0, S_POTTERYBIT_EX2_2) = none
	S_POTTERYBIT_EX2_2('PBIT', 6, 1.0 / 35.0, none) = A_PotteryCheck
	S_POTTERYBIT_EX3('PBIT', 7, 140.0 / 35.0, S_POTTERYBIT_EX3_2) = none
	S_POTTERYBIT_EX3_2('PBIT', 7, 1.0 / 35.0, none) = A_PotteryCheck
	S_POTTERYBIT_EX4('PBIT', 8, 140.0 / 35.0, S_POTTERYBIT_EX4_2) = none
	S_POTTERYBIT_EX4_2('PBIT', 8, 1.0 / 35.0, none) = A_PotteryCheck
	S_POTTERYBIT_EX5('PBIT', 9, 140.0 / 35.0, S_POTTERYBIT_EX5_2) = none
	S_POTTERYBIT_EX5_2('PBIT', 9, 1.0 / 35.0, none) = A_PotteryCheck
}

defaultproperties
{
	Radius = 5.0;
	Height = 5.0;
	bNoBlockmap = false;
	bDropOff = false;
	bNoGravity = false;
	IdleState = S_POTTERYBIT_1;
	DeathState = S_POTTERYBIT_EX0;
}
