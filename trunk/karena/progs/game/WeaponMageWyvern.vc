	S_MAGWYVATK1_4('MWYV', 4, 5.0 / 35.0, S_MAGWYVATK1_5) { A_FireWyvernBreath(true); }
	S_MAGWYVATK1_5('MWYV', 4, 5.0 / 35.0, S_MAGWYVATK1_6) { A_FireWyvernBreath(false); }
