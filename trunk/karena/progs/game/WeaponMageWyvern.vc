class WeaponMageWyvern : Weapon;

//==========================================================================
//
//  A_FireWyvernBreath
//
//==========================================================================

void A_FireWyvernBreath(bool use_mana)
{
	TAVec ang;
	int damage;
	int i;
	Actor pmo;
	DragonMissile mo;
	int flamedone = false;

	if (use_mana)
		UseWeaponMana();

	pmo = Actor(Player.MO);
	pmo.PlaySound('DragonAttack', CHAN_WEAPON);

	damage = 97; //90 + (P_Random() & 15);
	if (int_mod)
	{
		if(!active_damage)
		{
			damage = damage * Player(Player).intelligence / 10;
		}
		else // [FB] PI Damage
		{
			damage = (damage * Player(Player).intelligence / 10) * ftoi(3.1415);
		}
	}
	for (i = 0; i < 16; i++)
	{
		ang = pmo.Angles;
		ang.yaw = AngleMod360(ang.yaw + itof(i) * (45.0 / 16.0));
		pmo.AimLineAttack(&ang, MELEERANGE);
		if (pmo.linetarget)
		{
			pmo.bFireDamage = true;
			pmo.linetarget.Damage(pmo, pmo, damage);
			pmo.bFireDamage = false;
			flamedone = true;
			break;
		}
	}

	// didn't find any creatures, so fire projectiles
	if (!flamedone)
	{
		//[CW] put damage modifiers here
		mo = DragonMissile(Player(Player).SpawnPlayerMissile(DragonMissile));
		if (mo)
		{
			mo.deathmsgi = 16;
			mo.MissileDamage = 18;
			if(!active_damage)
			{
				mo.MissileDamage = mo.MissileDamage * Player(Player).intelligence / 10;
			}
			else // [FB] PI Damage
			{
				mo.MissileDamage = (mo.MissileDamage * Player(Player).intelligence / 10) * ftoi(3.1415);
			}
		}
	}
}

