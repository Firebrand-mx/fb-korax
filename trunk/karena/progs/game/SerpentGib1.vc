class SerpentGib1 : Effect;

//==========================================================================
//
//	A_FloatGib
//
//==========================================================================

final void A_FloatGib()
{
	FloorClip -= 1.0;
}

//==========================================================================
//
//	A_SinkGib
//
//==========================================================================

final void A_SinkGib()
{
	FloorClip += 1.0;
}

//==========================================================================
//
//	A_DelayGib
//
//==========================================================================

final void A_DelayGib()
{
	StateTime -= Random() * 2.0;
}

