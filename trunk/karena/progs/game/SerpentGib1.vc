class SerpentGib1 : Effect;

//==========================================================================
//
//	A_FloatGib
//
//==========================================================================

final void A_FloatGib()
{
	FloorClip -= 1.0;
}

//==========================================================================
//
//	A_SinkGib
//
//==========================================================================

final void A_SinkGib()
{
	FloorClip += 1.0;
}

//==========================================================================
//
//	A_DelayGib
//
//==========================================================================

final void A_DelayGib()
{
	StateTime -= Random() * 2.0;
}

states
{
Spawn:
	SSXD Q 6
	SSXD Q 6 A_FloatGib
	SSXD QQ 8 A_FloatGib
	SSXD QQ 12 A_FloatGib
	SSXD Q 232 A_DelayGib
	SSXD QQ 12 A_SinkGib
	SSXD QQQ 8 A_SinkGib
	Stop
}

defaultproperties
{
	Radius = 3.0;
	Height = 3.0;
}
