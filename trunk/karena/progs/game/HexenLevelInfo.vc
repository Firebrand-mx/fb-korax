//	CheckLock
//
//============================================================================

bool CheckLock(Actor A, int lock)
{
	if (!A.bIsPlayer)
	{
		return false;
	}
	if (!lock)
	{
		return true;
	}
	if (!(A.Player.Keys & (1 << (lock - 1))))
	{
		centerprint(A.Player, "YOU NEED THE %s", TextKeyMessages[lock - 1]);
		A.PlaySound('DoorLocked', CHAN_ITEM);
		return false;
	}
	return true;
}

