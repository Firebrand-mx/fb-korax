class TeleportFog:Effect;

//==========================================================================
//
//  A_Lights
//
//  Just spawn some dynamic light
//
//==========================================================================

final void A_Lights()
{
	SendExplosion2(Effects, Origin + vector(0.0, 0.0, Height * 0.5));

	//  Clear old dynamic light effect
	Effects &= ~EF_DLIGHT_MASK;
}

__states__
{
	S_TFOG1('TELE', 0 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG2) = none
	S_TFOG2('TELE', 1 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG3) = none
	S_TFOG3('TELE', 2 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG4) = none
	S_TFOG4('TELE', 3 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG5) = none
	S_TFOG5('TELE', 4 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG6) = none
	S_TFOG6('TELE', 5 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG7) = none
	S_TFOG7('TELE', 6 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG8) = none
	S_TFOG8('TELE', 7 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG9) = none
	S_TFOG9('TELE', 6 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG10) =  A_Lights
	S_TFOG10('TELE', 5 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG11) = none
	S_TFOG11('TELE', 4 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG12) = none
	S_TFOG12('TELE', 3 | FF_FULLBRIGHT, 6.0 / 35.0, S_TFOG13) = none
	S_TFOG13('TELE', 2 | FF_FULLBRIGHT, 6.0 / 35.0, none) = none
