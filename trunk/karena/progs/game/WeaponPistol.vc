class WeaponPistol : KArenaWeapon;

//===========================================================================
//
//  A_FirePistol
//
//===========================================================================

final void A_FirePistol()
{
	TVec	dir;

	if (!bIsPlayer)
	{
		return;
	}
	KArenaWeapon Wpn = KArenaWeapon(PlayerEx(Player).ReadyWeapon);

	PlaySound('PistolFire', CHAN_WEAPON);

	SetState(MissileState);
	Wpn.UseWeaponMana();

	Player.SetViewState(ps_flash, Wpn.FindState('Flash'));

	Aim(dir, MISSILERANGE);
	Wpn.GunShot(self, !Player(Player).Refire, dir);
	bMuzzleFlash = true;
	DLightColour = RGB(195, 79, 0);
}

states
{
Ready:
	PISG A 1 A_WeaponReady
	Loop
Deselect:
	PISG A 1 A_Lower
	Loop
Select:
	PISG A 1 A_Raise
	Loop
Fire:
	PISG A 4
	PISG B 6 Bright A_FirePistol
	PISG C 4
	PISG B 5 A_ReFire
	Goto Ready
Flash:
	PISF A 7 Bright A_Light1
	PISG A 0 A_Light0
	Stop
}

defaultproperties
{
	Slot = 2;
	SelectionOrder = 6500;
	AmmoType1 = ItemManaBlue;
	AmmoUse1 = 2;
	BotCombatDist = 192.0 + MISSILERANGE;
	wis_mod = true;
	int_mod = true;
	dex_mod = false;
	str_mod = false;
	bBotChooseMelee = true;
	bBotChooseMedium = true;
	bBotChooseRanged = true;
	fire_tics = 6.0;
	refire_tics = 20.0;
	RangedObituary = "$ob_pistol";
}
