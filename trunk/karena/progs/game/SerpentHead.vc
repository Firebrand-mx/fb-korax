class SerpentHead : Effect;

//==========================================================================
//
//	A_SerpentHeadCheck
//
//==========================================================================

final void A_SerpentHeadCheck()
{
	if (Origin.z <= FloorZ)
	{
		if (GetFloorType()->bLiquid)
		{
			HitFloorType();
			SetState(none);
		}
		else
		{
			SetState(FindState('Death'));
		}
	}
}

states
{
Spawn:
	SSXD IJKLMNOP 4 A_SerpentHeadCheck
	Loop
Death:
	SSXD S -1
	Wait
}

defaultproperties
{
	Radius = 5.0;
	Height = 10.0;
	Gravity = 0.125;
	bNoGravity = false;
}
