class WeaponMageWand : WeaponEx;

//==========================================================================
//
//  A_MWandAttack
//
//==========================================================================

final void A_MWandAttack()
{
	EntityEx mo;
	mo = Actor(Owner).SpawnPlayerMissile(MageWandMissile);
	if (mo && int_mod)
	{
		if(!active_damage)
		{
			mo.MissileDamage = mo.MissileDamage * Player(Owner.Player).intelligence / 10;
		}
		else // [FB] PI Damage
		{
			mo.MissileDamage = (mo.MissileDamage * Player(Owner.Player).intelligence / 10) * ftoi(3.1415);
		}
	}
	UseWeaponMana();
	Owner.PlaySound('MageWandFire', CHAN_WEAPON);
}

__states__
{
	S_MWANDREADY('MWND', 0, 1.0 / 35.0, S_MWANDREADY) = A_WeaponReady
	S_MWANDDOWN('MWND', 0, 1.0 / 35.0, S_MWANDDOWN) = A_Lower
	S_MWANDUP('MWND', 0, 1.0 / 35.0, S_MWANDUP) = A_Raise
	S_MWANDATK_1('MWND', 0, 6.0 / 35.0, S_MWANDATK_2) = none
	S_MWANDATK_2('MWND', 1 | FF_FULLBRIGHT, 6.0 / 35.0, S_MWANDATK_3, 0, 48) = A_MWandAttack
	S_MWANDATK_3('MWND', 0, 3.0 / 35.0, S_MWANDATK_4, 0, 40) = none
	S_MWANDATK_4('MWND', 0, 3.0 / 35.0, S_MWANDREADY, 0, 36) = A_ReFire
}


/*FIFTH*/
defaultproperties
