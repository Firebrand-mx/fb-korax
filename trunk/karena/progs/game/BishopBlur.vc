class BishopBlur : Effect;

//==========================================================================
//
//	A_SetAltShadow
//
//==========================================================================

void A_SetAltShadow()
{
	Translucency = 33;
}

__states__
{
	S_BISHOPBLUR1('BISH', 0, 16.0 / 35.0, S_BISHOPBLUR2) { }
	S_BISHOPBLUR2('BISH', 0, 8.0 / 35.0, none) { A_SetAltShadow(); }
}

defaultproperties
{
	Translucency = 66;
	IdleState = S_BISHOPBLUR1;
}
