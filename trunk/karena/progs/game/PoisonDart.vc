class PoisonDart : Projectile
	__scriptid__(52);

//==========================================================================
//
//  InflictorModifyDamage
//
//==========================================================================

int InflictorModifyDamage(Actor victim, Actor source, int damage)
{
	if (victim.bIsPlayer)
	{
		victim.PoisonPlayer(source, 20);
		damage >>= 1;
	}
	return damage;
}

__states__
{
	S_POISONDART_1('DART', 0, -1.0, none) = none
	S_POISONDART_X1('DART', 0, 1.0 / 35.0, none) = none
}

defaultproperties
{
	Radius = 8.0;
	Height = 4.0;
	Speed = 210.0;
	MissileDamage = 2;
	bActivateImpact = false;
	bActivatePCross = false;
	IdleState = S_POISONDART_1;
	DeathState = S_POISONDART_X1;
	Obituary = "$ob_poisondart";
}
