class MageWandMissile:Projectile;

__states__
{
	S_MWAND_MISSILE1('MWND', 2 | FF_FULLBRIGHT, 4.0 / 35.0, S_MWAND_MISSILE2) { }
	S_MWAND_MISSILE2('MWND', 3 | FF_FULLBRIGHT, 4.0 / 35.0, S_MWAND_MISSILE1) { }

	S_MWANDPUFF1('MWND', 4 | FF_FULLBRIGHT, 4.0 / 35.0, S_MWANDPUFF2) { }
	S_MWANDPUFF2('MWND', 5 | FF_FULLBRIGHT, 3.0 / 35.0, S_MWANDPUFF3) { }
	S_MWANDPUFF3('MWND', 6 | FF_FULLBRIGHT, 4.0 / 35.0, S_MWANDPUFF4) { }
	S_MWANDPUFF4('MWND', 7 | FF_FULLBRIGHT, 3.0 / 35.0, S_MWANDPUFF5) { }
	S_MWANDPUFF5('MWND', 8 | FF_FULLBRIGHT, 4.0 / 35.0, S_NULL) { }
