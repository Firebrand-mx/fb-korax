	Height = 8.0;
	Speed = 6440.0;
	MissileDamage = 8;
	bRip = true;
	bCannotPush = true;
	bNoDamageThrust = true;
	bBlaster = true;
	bIceDamage = true;
	IdleState = S_MWAND_MISSILE1;
	DeathState = S_MWANDPUFF1;
	Effects = EF_DL_BLUE;
}

