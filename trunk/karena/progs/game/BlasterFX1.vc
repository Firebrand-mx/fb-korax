class BlasterFX1 : Projectile;

//===========================================================================
//
//  A_SpawnRippers
//
//===========================================================================

final void A_SpawnRippers()
{
	int i;
	float angle;
	Actor ripper;

	for (i = 0; i < 8; i++)
	{
		ripper = Spawn(Ripper, Origin);
		angle = itof(i) * 45.0;
		ripper.Target = Target;
		ripper.Angles.yaw = angle;
		ripper.Velocity.x = ripper.Speed * cos(angle);
		ripper.Velocity.y = ripper.Speed * sin(angle);
		ripper.CheckMissileSpawn();
		ripper.MissileDamage = MissileDamage;
	}
}

__states__
{
	S_BLASTERFX1_1('ACLO', 4, 200.0 / 35.0, S_BLASTERFX1_1) = none
	S_BLASTERFXI1_1('FX18', 0 | FF_FULLBRIGHT, 3.0 / 35.0, S_BLASTERFXI1_2) = A_SpawnRippers
	S_BLASTERFXI1_2('FX18', 1 | FF_FULLBRIGHT, 3.0 / 35.0, S_BLASTERFXI1_3) = none
	S_BLASTERFXI1_3('FX18', 2 | FF_FULLBRIGHT, 4.0 / 35.0, S_BLASTERFXI1_4) = none
	S_BLASTERFXI1_4('FX18', 3 | FF_FULLBRIGHT, 4.0 / 35.0, S_BLASTERFXI1_5) = none
	S_BLASTERFXI1_5('FX18', 4 | FF_FULLBRIGHT, 4.0 / 35.0, S_BLASTERFXI1_6) = none
	S_BLASTERFXI1_6('FX18', 5 | FF_FULLBRIGHT, 4.0 / 35.0, S_BLASTERFXI1_7) = none
