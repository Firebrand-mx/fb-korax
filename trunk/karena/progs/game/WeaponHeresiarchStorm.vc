class WeaponHeresiarchStorm : KArenaWeapon;

//==========================================================================
//
//  A_HStormReady
//
//==========================================================================

final void A_HStormReady() //self(KArenaPlayerPawn)
{
	A_WeaponReady();
	if (P_Random() < 160)
	{
		PlaySound('MageLightningReady', CHAN_WEAPON);
	}
}

//==========================================================================
//
//  A_HStormAttack
//
//	[CW] ...something really bad's going to happen... =)
//
//==========================================================================

final void A_HStormAttack(int attack) self(KArenaPlayerPawn)
{
	// [CW] Heresiarch Storm launches 3 lightning missiles in 3 directions
	//		( those missiles have very limited lifetime ),
	//		plus a dozen of long-life sparks with lesser damage values.

	int ang;
	float fang;

	if (!bIsPlayer)
	{
		return;
	}
	KArenaWeapon Wpn = KArenaWeapon(PlayerEx(Player).ReadyWeapon);

	if (attack == 0)
	{
		LightningFloor fmo;
		LightningCeiling cmo;

		Wpn.AmmoUse1 = 10;

		for (ang = -30; ang < 60; ang += 30)
		{
			fang = AngleMod360(Angles.yaw + itof(ang));
			fmo = LightningFloor(KArenaPlayerPawn(self).SpawnPlayerMissileAngle_2(Wpn, LightningFloor, fang));
			cmo = LightningCeiling(KArenaPlayerPawn(self).SpawnPlayerMissileAngle_2(Wpn, LightningCeiling, fang));
			if (fmo)
			{
				//fmo.Obituary = "$ob_heresiarchlightning";
				fmo.ZigZagCount = 0;
				fmo.LightningLink = cmo;
				fmo.Health = 12;
				fmo.DamageBonus = 4;
				fmo.A_LightningZap();
			}
			if (cmo)
			{
				cmo.Obituary = "$ob_heresiarchlightning";
				cmo.Tracer = none;	// mobj that it will track
				cmo.LightningLink = fmo;
				cmo.Health = 12;
				cmo.DamageBonus = 4;
				cmo.A_LightningZap();
			}
		}
	}
	else
	{
		LightningSpark ls;

		Wpn.AmmoUse1 = (attack == 1) ? 40 : 30;

		if (attack == 1)
			ang = -80;
		else
			ang = -45;

		for (; ang < ((attack == 1) ? 90 : 60) ; ang += (attack == 1) ? 10 : 15)
		{
			fang = AngleMod360(Angles.yaw + itof(ang));
			ls = LightningSpark(KArenaPlayerPawn(self).SpawnPlayerMissileAngle_2(Wpn, LightningSpark, fang));
			if (ls)
			{
				ls.Health = 4 + P_Random() % 8;
				Wpn.ApplyDamageModifiers(ls.MissileDamage);
			}
		}
	}

	PlaySound('MageLightningFire', CHAN_WEAPON);
	Wpn.UseWeaponMana();
}

states
{
Ready:
	HSTM A 1 A_WeaponReady
	Loop
Deselect:
	HSTM A 1 A_Lower
	Loop
Select:
	HSTM A 1 A_Raise
	Loop
Fire:
	HSTM BC 4 Bright
	HSTM D 4 Bright
	HSTM E 4 Bright { A_HStormAttack(0); }
	HSTM FGH 4 Bright
	HSTM I 5 Bright { A_HStormAttack(1); }
	HSTM JK 5 Bright
	HSTM L 5 Bright { A_HStormAttack(2); }
	HSTM ML 5 Bright
	HSTM L 5 Bright
	HSTM M 5 Bright
	HSTM L 5 Bright
	HSTM M 5 Bright
	HSTM L 5 Bright
	Goto Ready
}

/* HERESIARCH THIRD */
defaultproperties
{
	Slot = 3;
	SelectionOrder = 5700;
	AmmoType1 = Mana2;
	PSpriteSY = -40.0;
	BotCombatDist = 384.0 + MISSILERANGE;
	wis_mod = true;
	int_mod = true;
	dex_mod = false;
	str_mod = false;
	bBotChooseMelee = false;
	bBotChooseMedium = false;
	bBotChooseRanged = false;
	refire_tics = 46.0;
	fire_tics = 7.0;
	PickupMessage = "LIGHTNING STORM";
	RangedObituary = "$ob_heresiarchlightning";
}
