class ZSuitOfArmor : Decoration
	__mobjinfo__(8064);

//===========================================================================
//
//  A_SoAExplode
//
//  Suit of Armor Explode
//
//===========================================================================

void A_SoAExplode()
{
	Actor A;
	int i;

	for (i = 0; i < 10; i++)
	{
		A = Spawn(ZArmorChunk, Origin + vector((Random() - 0.5) * 16.0,
			(Random() - 0.5) * 16.0, Random() * Height));
		A.SetState(ZArmorChunk(A).ChunkStates[i]);
		if (A)
		{
			A.Velocity.x = (Random() - Random()) * 4.0 * 35.0;
			A.Velocity.y = (Random() - Random()) * 4.0 * 35.0;
			A.Velocity.z = (Random() * 8.0 + 5.0) * 35.0;
		}
	}
	if (Args[0])
	{
		// Spawn an item
		Spawn(FindClassFromScriptId(Args[0]), Origin);
	}
	A.PlaySound('SuitofArmorBreak', CHAN_VOICE);
	Remove();
}

__states__
{
	S_ZSUITOFARMOR('SUIT', 0, -1.0, none) { }
	S_ZSUITOFARMOR_X1('SUIT', 0, 1.0 / 35.0, none) { A_SoAExplode(); }
}

defaultproperties
{
	Health = 60;
	Radius = 16.0;
	Height = 72.0;
	Mass = 99999.0;
	bSolid = true;
	bShootable = true;
	bNoBlood = true;
	IdleState = S_ZSUITOFARMOR;
	DeathState = S_ZSUITOFARMOR_X1;
	DeathSound = 'SuitofArmorBreak';
}
