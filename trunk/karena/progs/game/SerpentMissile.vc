class SerpentMissile : Projectile;

//==========================================================================
//
//  A_ContMobjSound
//
//==========================================================================

void A_ContMobjSound()
{
	PlaySound('SerpentFXContinuous', CHAN_VOICE);
}

__states__
{
	S_SERPENT_FX1('SSFX', 0 | FF_FULLBRIGHT, 3.0 / 35.0, S_SERPENT_FX2) { A_ContMobjSound(); }
	S_SERPENT_FX2('SSFX', 1 | FF_FULLBRIGHT, 3.0 / 35.0, S_SERPENT_FX3) { }
	S_SERPENT_FX3('SSFX', 0 | FF_FULLBRIGHT, 3.0 / 35.0, S_SERPENT_FX4) { }
	S_SERPENT_FX4('SSFX', 1 | FF_FULLBRIGHT, 3.0 / 35.0, S_SERPENT_FX1) { }
	S_SERPENT_FX_X1('SSFX', 2 | FF_FULLBRIGHT, 4.0 / 35.0, S_SERPENT_FX_X2) { }
	S_SERPENT_FX_X2('SSFX', 3 | FF_FULLBRIGHT, 4.0 / 35.0, S_SERPENT_FX_X3) { }
	S_SERPENT_FX_X3('SSFX', 4 | FF_FULLBRIGHT, 4.0 / 35.0, S_SERPENT_FX_X4) { }
	S_SERPENT_FX_X4('SSFX', 5 | FF_FULLBRIGHT, 4.0 / 35.0, S_SERPENT_FX_X5) { }
	S_SERPENT_FX_X5('SSFX', 6 | FF_FULLBRIGHT, 4.0 / 35.0, S_SERPENT_FX_X6) { }
	S_SERPENT_FX_X6('SSFX', 7 | FF_FULLBRIGHT, 4.0 / 35.0, none) { }
}

defaultproperties
{
	Radius = 8.0;
	Height = 10.0;
	Speed = 525.0;
	MissileDamage = 4;
	bActivateImpact = false;
	bActivatePCross = false;
	IdleState = S_SERPENT_FX1;
	DeathState = S_SERPENT_FX_X1;
	DeathSound = 'SerpentFXHit';
	Effects = HexenDefs::EF_DL_GREEN;
}

