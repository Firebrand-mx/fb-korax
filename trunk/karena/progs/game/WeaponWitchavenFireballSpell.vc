	S_WFIREBALLATK_2('WEFR', 2 | FF_FULLBRIGHT, 2.0 / 35.0, S_WFIREBALLATK_3) { /*SY = 48.0;*/ }
	S_WFIREBALLATK_3('WEFR', 3 | FF_FULLBRIGHT, 2.0 / 35.0, S_WFIREBALLATK_4) { /*SY = 48.0;*/ }
	S_WFIREBALLATK_4('WEFR', 4 | FF_FULLBRIGHT, 2.0 / 35.0, S_WFIREBALLATK_5) { /*SY = 48.0;*/ }
	S_WFIREBALLATK_5('WEFR', 5 | FF_FULLBRIGHT, 2.0 / 35.0, S_WFIREBALLATK_6) { /*SY = 48.0;*/ A_WFireballAttack(); }
	S_WFIREBALLATK_6('WEFR', 6 | FF_FULLBRIGHT, 2.0 / 35.0, S_WFIREBALLATK_7) { /*SY = 40.0;*/ }
