class WeaponWitchavenFireballSpell : Weapon;

//==========================================================================
//
//	WFireballSpawn
//
//==========================================================================

void WFireballSpawn(float angle)
{
	Actor mo;

	mo = Player.SpawnPlayerMissileAngle(FireBallMissile, angle);

	if (mo)
	{
		mo.Instigator = Player.MO;
		mo.Enemy = Actor(mo.RoughMonsterSearch(2));
		if (int_mod)
		{
			mo.MissileDamage = mo.MissileDamage *Player.intelligence/10;
		}
	}
}

//==========================================================================
//
//  A_WFireballAttack
//
//==========================================================================

void A_WFireballAttack(void)
{
	float angle;

	UseWeaponMana();
	angle = Player.MO.Angles.yaw;

	if (Player.exp_level >= 1 && Player.exp_level < 9)
	{
		WFireballSpawn(angle);
	}
	if (Player.exp_level >= 9 && Player.exp_level < 15)
	{
		WFireballSpawn(angle - 2.5);
		WFireballSpawn(angle);
	}
	if (Player.exp_level >= 15 && Player.exp_level < 21)
	{
		WFireballSpawn(angle - 2.5);
		WFireballSpawn(angle);
		WFireballSpawn(angle + 2.5);
	}
	if (Player.exp_level >= 21)
	{
		WFireballSpawn(angle - 5.0);
		WFireballSpawn(angle - 2.5);
		WFireballSpawn(angle);
		WFireballSpawn(angle + 2.5);
	}	

	Player.MO.PlaySound('MageStaffFire', CHAN_WEAPON);
}

