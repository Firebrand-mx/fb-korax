class ArtifactPuzzle : Artifact
	abstract;

//==========================================================================
//
//	ShouldStay
//
//==========================================================================

bool ShouldStay()
{
	return Level.Game.netgame && !Level.Game.deathmatch;
}

//==========================================================================
//
//	ShouldRespawn
//
//==========================================================================

bool ShouldRespawn()
{
	// Remove puzzle items if not cooperative netplay
	return false;
}

defaultproperties
{
	bFloatBob = false;
	bNoGravity = true;
	bPickupFlash = false;
	PickupSound = 'PickupItem';
	bFullVolPickupSound = true;
}
