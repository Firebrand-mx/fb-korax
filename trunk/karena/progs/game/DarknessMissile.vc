class DarknessMissile:Effect;

int LifeCount;

//==========================================================================
//
//	InitMe
//
//==========================================================================

void InitMe(Actor InstigatedBy)
{
	LifeCount = 36 + (P_Random() & 7);
	Instigator = InstigatedBy;
	bColideWithThings = true;
	bColideWithWorld = true;
}

//==========================================================================
//
//  A_ChkDeath
//
//==========================================================================

void A_ChkDeath(void)
{
	P_RadiusAttack(self, Instigator, 4, 40.0, true);
	if (!--LifeCount)
	{
		SetState(DeathState);
	}
}

__states__
{
	S_DARK_MISSILE_1('FHFX', 0, 2.0 / 35.0, S_DARK_MISSILE_2) { }
	S_DARK_MISSILE_2('FHFX', 1, 2.0 / 35.0, S_DARK_MISSILE_3) { }
	S_DARK_MISSILE_3('FHFX', 2, 2.0 / 35.0, S_DARK_MISSILE_1) { A_ChkDeath(); }
	S_DARK_MISSILE_X1('FHFX', 8, 3.0 / 35.0, S_DARK_MISSILE_X2) { }
	S_DARK_MISSILE_X2('FHFX', 9, 3.0 / 35.0, S_DARK_MISSILE_X3) { }
	S_DARK_MISSILE_X3('FHFX', 10, 3.0 / 35.0, S_NULL) { }
}

defaultproperties
{
	Radius = 14.0;
	Height = 20.0;
	IdleState = S_DARK_MISSILE_1;
	DeathState = S_DARK_MISSILE_X1;
	DeathSound = 'FighterHammerExplode';
	Effects = EF_DL_DARK;	
}

