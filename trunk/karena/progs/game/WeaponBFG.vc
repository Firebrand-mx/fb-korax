class WeaponBFG : KArenaWeapon;

//===========================================================================
//
//  A_BFGsound
//
//===========================================================================

final void A_BFGsound()
{
	PlaySound('BFGFire', CHAN_WEAPON);
}

//===========================================================================
//
//  A_FireBFG
//
//===========================================================================

final void A_FireBFG()
{
	if (!bIsPlayer)
	{
		return;
	}
	KArenaWeapon Wpn = KArenaWeapon(PlayerEx(Player).ReadyWeapon);

	EntityEx mo;
	Wpn.UseWeaponMana();
	mo = KArenaPlayerPawn(self).SpawnPlayerMissile_2(Wpn, BFGShot);
	if (mo)
		Wpn.ApplyDamageModifiers(mo.MissileDamage);
}

states
{
Ready:
	BFGG A 1 A_WeaponReady
	Loop
Deselect:
	BFGG A 1 A_Lower
	Loop
Select:
	BFGG A 1 A_Raise
	Loop
Fire:
	BFGG A 20 A_BFGsound
	BFGG B 10 Bright A_GunFlash
	BFGG B 10 Bright A_FireBFG
	BFGG B 20 A_ReFire
	Goto Ready
Flash:
	BFGF A 11 Bright A_Light1
	BFGF B 6 Bright A_Light2
	BFGG A 0 A_Light0
	Stop
}

defaultproperties
{
	Slot = 8;
	SelectionOrder = 500;
	AmmoType1 = ItemManaBlue;
	AmmoType2 = ItemManaGreen;
	AmmoType3 = ItemManaRed;
	AmmoUse1 = 100;
	AmmoUse2 = 100;
	AmmoUse3 = 100;
	BotCombatDist = 192.0 + MISSILERANGE;
	wis_mod = true;
	int_mod = true;
	dex_mod = false;
	str_mod = false;
	bBotChooseMelee = false;
	bBotChooseMedium = true;
	bBotChooseRanged = true;
	bBotProjectile = true;
	fire_tics = 10.0;
	refire_tics = 60.0;
	PickupMessage = "BFG 9000";
	RangedObituary = "$ob_bfg";
}
