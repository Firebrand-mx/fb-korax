class ZLeafSpawner : Actor
	__mobjinfo__(113);

//==========================================================================
//
//  A_LeafSpawn
//
//==========================================================================

void A_LeafSpawn()
{
	Actor A;
	int i;

	for (i = (P_Random() & 3) + 1; i; i--)
	{
		A = Spawn(P_Random() & 1 ? Leaf2 : Leaf1, Origin + vector(
			(Random() - Random()) * 64.0,
			(Random() - Random()) * 64.0,
			Random() * 64.0));
		if (A)
		{
			A.Thrust(Angles.yaw, Random() * 2.0 + 3.0);
			A.Instigator = self;
		}
	}
}

__states__
{
	S_ZLEAFSPAWNER('MAN1', 0, 20.0 / 35.0, S_ZLEAFSPAWNER) { A_LeafSpawn(); }
}

defaultproperties
{
	Health = 1000;
	Radius = 20.0;
	Height = 16.0;
	Mass = 100.0;
	Alpha = 0.0;
	bHidden = true;
	bNoBlockmap = true;
	bNoPassMobj = true;
	IdleState = S_ZLEAFSPAWNER;
}
