class ZFireBull : SwitchableDecoration
	__mobjinfo__(8042);

//==========================================================================
//
//	A_IgniteSound
//
//==========================================================================

final void A_IgniteSound()
{
	PlaySound('Ignite', CHAN_VOICE);
}

states
{
Active:
	FBUL I 4 Bright A_IgniteSound
	FBUL J 4 Bright
Spawn:
	FBUL ABCDEFG 4 Bright
	Loop
Inactive:
	FBUL JI 4 Bright
	FBUL H -1
	Stop
}

defaultproperties
{
	Radius = 20.0;
	Height = 80.0;
	bSolid = true;
	bNoPassMobj = true;
	bStaticLight = true;
	LightColour = RGB(255, 255, 0);
	LightOffset = vector(0.0, 0.0, 72.0);
	LightRadius = 170.0;
}
