class WeaponClericFire : Weapon;

//============================================================================
//
//  A_CFlameAttack
//
//============================================================================

void A_CFlameAttack()
{
	Actor mo;

	mo = Player(Player).SpawnPlayerMissile(ClericFlameMissile);
	if (mo)
	{
		mo._Special1 = 2;
		if (int_mod)
		{
			if(!active_damage)
			{
				mo.MissileDamage = mo.MissileDamage * Player(Player).intelligence / 10;
			}
			else // [FB] PI Damage
			{
				mo.MissileDamage = (mo.MissileDamage * Player(Player).intelligence / 10) * ftoi(3.1415);
			}
		}
	}

	UseWeaponMana();
	Player.MO.PlaySound('ClericFlameFire', CHAN_WEAPON);
}

