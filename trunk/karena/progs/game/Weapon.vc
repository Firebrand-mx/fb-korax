//==========================================================================
//
//	AttachToOwner
//
//==========================================================================

void AttachToOwner(EntityEx NewOwner)
{
	::AttachToOwner(NewOwner);

	if (AmmoType3)
	{
		Ammo3 = Ammo(NewOwner.FindInventory(AmmoType3));
		if (!Ammo3)
		{
			FatalError("Owner has no ammo type %s", GetClassName(AmmoType3));
		}
	}
	else
	{
		Ammo3 = none;
	}
}

