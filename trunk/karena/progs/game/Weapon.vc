//==========================================================================
//
//  GetManaUse
//
//==========================================================================

int GetManaUse()
{
	int manause = AmmoUse1;
	if (wis_mod)
	{
		manause = manause * 10 / Player(Owner.Player).wisdom;
	}
	// [FB] Always use mana, no matter what
	if(manause < 1)
	{
		manause = 1;
	}
	return manause;
}

//==========================================================================
//
//  CheckAmmo
//
//  Returns true if there is enough mana to shoot.  If not, selects the
// next weapon to use.
//
//==========================================================================

bool CheckAmmo(bool AutoSwitch, optional bool RequireAmmo)
{
	if (!RequireAmmo && needsnomana)
	{
		return true;
	}
	bool Good = true;
	if (Ammo1 && Ammo1.Amount < GetManaUse())
	{
		Good = false;
	}
	if (Ammo2 && Ammo2.Amount < GetManaUse())
	{
		Good = false;
	}
	if (Ammo3 && Ammo3.Amount < GetManaUse())
	{
		Good = false;
	}
	if (Good)
	{
		return true;
	}
	if (!AutoSwitch)
	{
		return false;
	}
	Player(Owner.Player).centreprint("No mana");

	// out of mana, pick a weapon to change to
	WeaponEx Best = WeaponEx(Player(Owner.Player).BestWeapon());

	Player(Owner.Player).PendingWeapon = Best;
	Player(Owner.Player).SetViewState(ps_weapon, GetDownState());
	return false;
}

//==========================================================================
//
//  UseWeaponMana
//
//==========================================================================

void UseWeaponMana()
{
	if (Ammo1)
	{
		Ammo1.Amount -= GetManaUse();
		if (Ammo1.Amount < 0)
		{
			Ammo1.Amount = 0;
		}
	}
	if (Ammo2)
	{
		Ammo2.Amount -= GetManaUse();
		if (Ammo2.Amount < 0)
		{
			Ammo2.Amount = 0;
		}
	}
	if (Ammo3)
	{
		Ammo3.Amount -= GetManaUse();
		if (Ammo3.Amount < 0)
		{
			Ammo3.Amount = 0;
		}
	}
}

