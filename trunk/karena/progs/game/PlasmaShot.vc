class PlasmaShot : Projectile;

//===========================================================================
//
//  A_Particles
//
//===========================================================================

final void A_Particles()
{
	int i;
	
	for (i = 0; i < MAXPLAYERS; i++)
	{
		if (!Level.Game.Players[i])
			continue;
		if (!Level.Game.Players[i].bSpawned)
			continue;
		PlayerEx(Level.Game.Players[i]).ParticleEffect(10, LineSpecialLevelInfo::pt_static, 0, Origin, 10.0,
				vector(256.0, 256.0, 256.0), 0.3, 20.0, 85.0, RGB(115, 115, 255), 1.0, 2.0);
	}
}

states
{
Spawn:
	PLSS AB 6 Bright
	Loop
Death:
	PLSE A 4 Bright A_Particles
	PLSE BCDE 4 Bright
	Stop
}

defaultproperties
{
	Radius = 13.0;
	Height = 8.0;
	Speed = 875.0;
	MissileDamage = 10;
	RenderStyle = STYLE_Translucent;
	Alpha = 0.666;
	bMissile = true;
	bNoBlockmap = true;
	bNoGravity = true;
	bDropOff = true;
	bActivatePCross = true;
	bActivateImpact = true;
	bNoTeleport = true;
	SightSound = 'PlasmaFire';
	DeathSound = 'FireballExplode';
	//Obituary = "$ob_plasmagun";
}
