class FlameSmallTemp : Decoration
	__mobjinfo__(10500)
	__scriptid__(96);

//===========================================================================
//
//  A_FlameCheck
//
//===========================================================================

final void A_FlameCheck()
{
	if (!Args[0]--)	// Called every 8 tics
	{
		SetState(none);
	}
}

states
{
Spawn:
	FFSM AB 3 Bright
	FFSM C 2 Bright A_FlameCheck
	FFSM C 2 Bright
	FFSM D 3 Bright
	FFSM E 3 Bright A_FlameCheck
	Loop
}

defaultproperties
{
	RenderStyle = STYLE_Add;
	bNoTeleport = true;
}
