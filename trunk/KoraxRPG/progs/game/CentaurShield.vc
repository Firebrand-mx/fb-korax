class CentaurShield : Carcas;

//==========================================================================
//
//  A_CheckFloor
//
//  Checks if an object hit the floor
//
//==========================================================================

final void A_CheckFloor()
{
	if (Origin.z <= FloorZ)
	{
		Origin.z = FloorZ;
		//bLowGravity = false;
		SetState(FindState('Death'));
	}
}

states
{
Spawn:
	CTDP ABCDEF 3 A_CheckFloor
	Goto Spawn+2
Death:
	CTDP G 4
	CTDP H 4 A_QueueCorpse
	CTDP I 4
	CTDP J -1
	Stop
}

defaultproperties
{
	bFloorClip = false;
}
