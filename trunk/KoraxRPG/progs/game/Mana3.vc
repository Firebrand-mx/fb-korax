class Mana3 : Inventory
	__mobjinfo__(8004)
	__scriptid__(75);

//==========================================================================
//
//  TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	if (Player(Toucher.Player).GiveMana(Mana1, Amount) |
		Player(Toucher.Player).GiveMana(Mana2, Amount))
	{
		GoAwayAndDie();
		return true;
	}
	return false;
}

states
{
Spawn:
	MAN3 ABCDEFGHIJKLMNOP 4 Bright
	Loop
}

defaultproperties
{
	Health = 10;
	Radius = 8.0;
	Height = 8.0;
	MaxAmount = 200;
	bFloatBob = true;
	Amount = 20;
	bDynamicLight = true;
	DLightColour = RGB(255, 0, 0);
	DLightRadius = 100.0;
	PickupMessage = "$txt_mana_both";
}
