class WeaponMageBloodscourge : WeaponMageArcane;

int				CShift;

//==========================================================================
//
//	GetBlend
//
//==========================================================================

int GetBlend()
{
	return CShift;
}

//==========================================================================
//
//  A_MStaffPalette1
//
//==========================================================================

final void A_MStaffPalette1() self(Actor)
{
	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	WeaponMageBloodscourge(Wpn).CShift = RGBA(255, 187, 4, 63);
}

//==========================================================================
//
//  A_MStaffPalette2
//
//==========================================================================

final void A_MStaffPalette2() self(Actor)
{
	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	WeaponMageBloodscourge(Wpn).CShift = RGBA(255, 187, 4, 51);
}

//==========================================================================
//
//  A_MStaffPalette3
//
//==========================================================================

final void A_MStaffPalette3() self(Actor)
{
	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	// reset back to original playpal
	WeaponMageBloodscourge(Wpn).CShift = 0;
}

states
{
Ready:
	MSTF AAAAAABBBBBBCCCCCCDDDDDDEEEEEEFFFFF 1 DoReadyWeapon
	Loop
Deselect:
	MSTF A 1 A_Lower
	Loop
Select:
	MSTF A 1 A_Raise
	Loop
Fire:
	MSTF G 4 Offset(0, 40)
	MSTF H 4 Bright Offset(0, 48) WA_MStaffAttack
	MSTF H 2 Bright Offset(0, 48) A_MStaffPalette1
	MSTF I 2 Offset(0, 48) A_MStaffPalette2
	MSTF I 2 Offset(0, 48) A_MStaffPalette3
	MSTF I 1 Offset(0, 40)
	MSTF J 5 Offset(0, 36)
	Goto Ready
}

defaultproperties
{
	SelectionOrder = 3100;
	AmmoType1 = Mana1;
	AmmoType2 = Mana2;
	AmmoUse1 = 15;
	AmmoUse2 = 15;
	AmmoGive1 = 20;
	AmmoGive2 = 20;
	PSpriteSY = 20.0;
	PickupMessage = "$txt_weapon_m4";
	BotCombatDist= 384.0;
	bBotProjectile = true;
	bExtremeDeath = true;
	bPrimaryUsesBoth = true;
}
