class KRPGPlayerReplicationInfo : PlayerReplicationInfo;

int		plclass;
int		exp;
int		level;
int 	next_lvl;
int		gold;
int		strg;
int		cons;
int		intln;
int		wsdm;
int		dext;
int		char;
int		points;


// KoraxRPG initalize quest variables
// possible states:
// 0 = undiscovered
// 1 = active
// 2 = objective completed
// 3 = quest turned in

// main questline

int quest11;
int quest12;
int quest13;

// church quests

int quest21;
int quest22;
int quest23;
int quest24;

// legion quests

int quest31;
int quest32;
int quest33;
int quest34;
int quest35;

// arcanum quests

int quest41;
int quest42;
int quest43;

// merchant guild quests

int quest51;
int quest52;



replication
{
	reliable if (Role == ROLE_Authority)
		plclass, exp, level, next_lvl, gold, strg,
		cons, intln, wsdm, dext, char, points,
		quest11, quest12, quest13,
		quest21, quest22, quest23, quest24,
		quest31, quest32, quest33, quest34, quest35,
		quest41, quest42, quest43,
		quest51, quest52;
		
}

//==========================================================================
//
//  Tick
//
//==========================================================================

void Tick(float DeltaTime)
{
	Player		P;

	::Tick(DeltaTime);

	P = Player(Player);
	plclass = P.PClass;
	exp = P.experience;
	level = P.exp_level;
	next_lvl = P.next_level;
	gold = P.money;
	strg = P.strength;
	cons = P.constitution;
	intln = P.intelligence;
	wsdm = P.wisdom;
	dext = P.dexterity;
	char = P.charisma;
	quest21 = P.quest21;
	points = P.GetPoints();
}

defaultproperties
{
}
