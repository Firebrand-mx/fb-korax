class CWeapMace : ClericWeapon;

//===========================================================================
//
//  A_CMaceAttack
//
//===========================================================================

final void A_CMaceAttack() self(Actor)
{
	int			damage;
	TVec		vforward;
	EntityEx	AimTarget;

	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	damage = 25 + (P_Random() & 15);
	AimTarget = AimEx(vforward, 2.0 * MELEERANGE, 45.0 / 16.0, 16, MELEERANGE);
	if (AimTarget)
	{
		if (LineAttack(vforward, 2.0 * MELEERANGE, damage, HammerPuff))
		{
			PlaySound('FighterHammerMiss', CHAN_WEAPON);
		}
		Player(Player).AdjustPlayerAngle(AimTarget);
	}
	else
	{
		// didn't find any creatures, so try to strike any walls
		if (LineAttack(vforward, MELEERANGE, damage, HammerPuff))
		{
			PlaySound('FighterHammerMiss', CHAN_WEAPON);
		}
	}
}

states
{
Ready:
	CMCE A 1 A_WeaponReady
	Loop
Deselect:
	CMCE A 1 A_Lower
	Loop
Select:
	CMCE A 1 A_Raise
	Loop
Fire:
	CMCE B 2 Offset(60, 20)
	CMCE B 1 Offset(30, 33)
	CMCE B 2 Offset(8, 45)
	CMCE C 1 Offset(8, 45)
	CMCE D 1 Offset(8, 45)
	CMCE E 1 Offset(8, 45)
	CMCE E 1 Offset(-11, 58) A_CMaceAttack
	CMCE F 1 Offset(8, 45)
	CMCE F 2 Offset(-8, 74)
	CMCE F 1 Offset(-20, 96)
	CMCE F 8 Offset(-33, 160)
	CMCE A 2 Offset(8, 75) A_ReFire
	CMCE A 1 Offset(8, 65)
	CMCE A 2 Offset(8, 60)
	CMCE A 1 Offset(8, 55)
	CMCE A 2 Offset(8, 50)
	CMCE A 1 Offset(8, 45)
	Goto Ready
}

defaultproperties
{
	WeaponClass = HexenDefs::PCLASS_CLERIC;
	SelectionOrder = 3500;
	PSpriteSY = -8.0;
	BotCombatDist = 48.0;
	bBotMelee = true;
	bBloodSplatter = true;
}
