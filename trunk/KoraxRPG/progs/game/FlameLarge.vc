class FlameLarge : Actor
	__mobjinfo__(10503)
	__scriptid__(99);

states
{
Inactive:
	FFLG DCB 2
	FFLG A 2 A_HideThing
	FFLG A 200
	Wait
Spawn:
Active:
	FFLG A 2 Bright
	FFLG A 2 Bright A_UnHideThing
	FFLG ABCDEFGHIJKLMNOP 4 Bright
	Goto Spawn+6
}

//==========================================================================
//
//	Activate
//
//==========================================================================

bool Activate()
{
	PlaySound('Ignite', CHAN_VOICE);
	SetState(FindState('Active'));
	return true;
}

//==========================================================================
//
//	Deactivate
//
//==========================================================================

bool Deactivate()
{
	SetState(FindState('Inactive'));
	return true;
}

defaultproperties
{
	RenderStyle = STYLE_Add;
	bInvisible = true;
	bNoTeleport = true;
}
