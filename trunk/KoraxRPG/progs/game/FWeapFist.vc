class FWeapFist : FighterWeapon;

state Attack2State;
int PunchCount;

//==========================================================================
//
//  A_FPunchAttack
//
//==========================================================================

final void A_FPunchAttack()
{
	int				damage;
	float			power;
	TVec			vforward;
	class<Actor>	PuffType;
	EntityEx		AimTarget;
	TAVec			angles;

	damage = 40 + (P_Random() & 15);
	power = 2.0;
	PuffType = PunchPuff;
	AimTarget = Actor(Owner).AimEx(vforward, 2.0 * Actor::MELEERANGE, 45.0 / 16.0,
		16, Actor::MELEERANGE);
	if (AimTarget)
	{
		VectorAngles(&vforward, &angles);
		PunchCount++;
		if (PunchCount == 3)
		{
			damage <<= 1;
			power = 6.0;
			PuffType = HammerPuff;
		}
		if (Actor(Owner).LineAttack(vforward, 2.0 * Actor::MELEERANGE, damage, PuffType))
		{
			if (PuffType == HammerPuff)
			{
				Owner.PlaySound('FighterHammerMiss', CHAN_WEAPON);
			}
			else
			{
				Owner.PlaySound('FighterPunchMiss', CHAN_WEAPON);
			}
		}
		if (AimTarget.bMonster || AimTarget.bIsPlayer)
		{
			AimTarget.Thrust(angles.yaw, power);
		}
		Player(Owner.Player).AdjustPlayerAngle(AimTarget);
	}
	else
	{
		// didn't find any creatures, so try to strike any walls
		PunchCount = 0;

		if (Actor(Owner).LineAttack(vforward, Actor::MELEERANGE, damage, PuffType))
		{
			Owner.PlaySound('FighterPunchMiss', CHAN_WEAPON);
		}
	}

	if (PunchCount == 3)
	{
		PunchCount = 0;
		Owner.Player.SetViewState(ps_weapon, Attack2State);
		Owner.PlaySound('*fistgrunt', CHAN_VOICE);
	}
}

