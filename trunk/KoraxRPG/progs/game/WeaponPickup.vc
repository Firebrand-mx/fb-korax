class WeaponPickup : Pickup
	abstract;

int WeaponClass;
int WeaponType;

//==========================================================================
//
//  TouchSpecial
//
//==========================================================================

void TouchSpecial(Actor Toucher)
{
	bool remove;
	bool gaveMana;
	bool gaveWeapon;

	if (!Toucher.bPickUp)
	{
		// Can't be picked up by toucher
		return;
	}
	if (Toucher.Health <= 0)
	{
		// Toucher is dead
		return;
	}
	remove = true;
	if (Toucher.Player.PClass != WeaponClass)
	{
		// Wrong class, but try to pick up for mana
		if (netgame && !deathmatch)
		{
			// Can't pick up weapons for other classes in coop netplay
			return;
		}
		if (WeaponType == WP_SECOND)
		{
			if (!Toucher.Player.GiveMana(MANA_1, 25))
			{
				return;
			}
		}
		else
		{
			if (!Toucher.Player.GiveMana(MANA_2, 25))
			{
				return;
			}
		}
	}
	else if (netgame && !deathmatch)
	{
		// Cooperative net-game
		if (Toucher.Player.WeaponOwned[WeaponType])
		{
			return;
		}
		Toucher.Player.WeaponOwned[WeaponType] = true;
		if (WeaponType == WP_SECOND)
		{
			Toucher.Player.GiveMana(MANA_1, 25);
		}
		else
		{
			Toucher.Player.GiveMana(MANA_2, 25);
		}
		Toucher.Player.PendingWeapon = WeaponType;
		remove = false;
	}
	else
	{
		// Deathmatch or single player game
		if (WeaponType == WP_SECOND)
		{
			gaveMana = Toucher.Player.GiveMana(MANA_1, 25);
		}
		else
		{
			gaveMana = Toucher.Player.GiveMana(MANA_2, 25);
		}
		if (Toucher.Player.WeaponOwned[WeaponType])
		{
			gaveWeapon = false;
		}
		else
		{
			gaveWeapon = true;
			Toucher.Player.WeaponOwned[WeaponType] = true;
			if (WeaponType > Toucher.Player.ReadyWeapon)
			{
				// Only switch to more powerful weapons
				Toucher.Player.PendingWeapon = WeaponType;
			}
		}
		if (!gaveWeapon && !gaveMana)
		{
			// Player didn't need the weapon or any mana
			return;
		}
	}

	cprint(Toucher.Player, weaponMessages[WeaponClass * 2 + WeaponType - 1]);
	if (Special)
	{
		ExecuteLineSpecial(Special, &Args[0], NULL, 0, Toucher);
		Special = 0;
	}

	if (remove)
	{
		if (deathmatch && !bDropped)
		{
			HideSpecial();
		}
		else
		{
			Remove();
		}
	}

	Toucher.Player.BonusFlash += BONUSADD;
	Toucher.PlaySound('PickupWeapon', CHAN_ITEM);
}

