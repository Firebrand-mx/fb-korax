class Ettin : Pawn
	__mobjinfo__(10030)
	__scriptid__(4);

//============================================================================
//
//  A_EttinAttack
//
//============================================================================

final void A_EttinAttack()
{
	if (CheckMeleeRange())
	{
		Target.Damage(self, self, HITDICE(
			((default.Health - 175) / 175) + 2));
	}
}

//============================================================================
//
//  A_DropMace
//
//============================================================================

final void A_DropMace()
{
	Actor mace;

	mace = Spawn(EttinMace, Origin + vector(0.0, 0.0, Height / 2.0));
	if (mace)
	{
		mace.Velocity.x = (Random() - 0.5) * 8.0 * 35.0;
		mace.Velocity.y = (Random() - 0.5) * 8.0 * 35.0;
		mace.Velocity.z = (10.0 + Random() * 4.0) * 35.0;
		mace.Target = self;
	}
}

