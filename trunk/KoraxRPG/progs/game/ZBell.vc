class ZBell : Actor
	__mobjinfo__(8065);

//==========================================================================
//
//	A_BellReset1
//
//==========================================================================

final void A_BellReset1()
{
	bNoGravity = true;
	Height *= 4.0;
}

//==========================================================================
//
//	Activate
//
//==========================================================================

bool Activate(EntityEx Activator)
{
	if (Health > 0)
	{
		Damage(none, none, 10);	// 'ring' the bell
	}
	return true;
}

//==========================================================================
//
//	A_BellReset2
//
//==========================================================================

final void A_BellReset2()
{
	bShootable = true;
	bCorpse = false;
	Health = 5;
}

