class PigPlayer : PlayerPawn;

states
{
Spawn:
	PIGY A -1
	Stop
See:
	PIGY ABCD 3
	Loop
Melee:
Missile:
	PIGY A 12
	Goto Spawn
Pain:
	PIGY D 4 A_PigPain
	Goto Spawn
Death:
	PIGY E 4 A_Scream
	PIGY F 3 A_NoBlocking
	PIGY G 4 A_QueueCorpse
	PIGY H 3
	PIGY IJK 4
	PIGY L -1
	Stop
Ice:
	PIGY M 5 A_FreezeDeath
	PIGY M 1 A_FreezeDeathChunks
	Wait
}

defaultproperties
{
	Health = 100;
	Radius = 16.0;
	Height = 24.0;
	PainChance = 1.0;
	PainSound = 'PigPain';
	DeathSound = 'PigDeath';
	SoundClass = 'pig';

	InitialInventory.Num = 1;
	InitialInventory[0].Type = Snout; InitialInventory[0].Amount = 1;
}
