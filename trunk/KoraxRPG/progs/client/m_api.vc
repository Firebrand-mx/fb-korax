// MACROS ------------------------------------------------------------------

#define NUM_MENUS		12

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

struct menulist_t
{
	string Name;
	classid MenuClass;
};

// FUNCTION PROTOTYPES -----------------------------------------------------

// DATA DECLARATIONS -------------------------------------------------------

menulist_t menulist[NUM_MENUS] = {
	{ "Main", MenuScreenMain },
	{ "Save", MenuScreenSaveGame },
	{ "Load", MenuScreenLoadGame },
	{ "PSetup", MenuScreenPlayerSetup },
	{ "Options", MenuScreenOptions },
	{ "Controls", MenuScreenControls },
	{ "Controls2", MenuScreenControls2 },
	{ "Mouse", MenuScreenMouseOptions },
	{ "Resolution", MenuScreenScreenResolution },
	{ "Video", MenuScreenVideoOptions },
	{ "Sound", MenuScreenSoundOptions },
	{ "Help", MenuScreenHelp },
//	{ "Quit", menu_quit },
};

// CODE --------------------------------------------------------------------

//==========================================================================
//
//  MN_DeactivateMenu
//
//==========================================================================

void MN_DeactivateMenu(void)
{
	ForceMenuOff();
}

//==========================================================================
//
//  MN_Responder
//
//==========================================================================

bool MN_Responder(event_t * event)
{
	if (!CurrentMenuScreen)
	{
		// Pop-up menu?
		if (event->type == ev_keydown && event->data1 == K_ESCAPE)
		{
			PushMenuScreen(SpawnMenu(MenuScreenMain));
			return true;
		}
		return false;
	}

	if (event->type != ev_keydown)
	{
		return false;
	}
	return CurrentMenuScreen.Key(event->data1);
}

//==========================================================================
//
//  MN_Active
//
//==========================================================================

bool MN_Active(void)
{
	return CurrentMenuScreen != none;
}

//==========================================================================
//
//	MN_SetMenu
//
//==========================================================================

void MN_SetMenu(string Name)
{
	int i;

	for (i = 0; i < NUM_MENUS; i++)
	{
		if (!stricmp(Name, menulist[i].Name))
		{
			PushMenuScreen(SpawnMenu(menulist[i].MenuClass));
			return;
		}
	}
	if (!stricmp(Name, "Quit"))
	{
		menu_quit();
		return;
	}
	PushMenuScreen(SpawnMenu(MenuScreenMain));
}

