class CodexLiterature : KRPGMenuScreen;

KRPGPlayerReplicationInfo RepInfo;

const int
	TABLE_HEAD_Y		= 68,
	TABLE_STRING_DELTA	= 14;


//==========================================================================
//
//	CyclePrevChoice
//
//==========================================================================

void CyclePrevChoice()
{
}

//==========================================================================
//
//	CycleNextChoice
//
//==========================================================================

void CycleNextChoice()
{
}

//==========================================================================
//
//  OnDraw
//
//==========================================================================

 void OnDraw()
{
	DrawPic(0, 0, R_RegisterPic('journag'));

	foreach ClGame.GLevel.LevelInfo.AllThinkers(KRPGPlayerReplicationInfo, RepInfo)
	{
		if (ClGame.cl.ClientNum == RepInfo.PlayerNum)
		{
		
			if (RepInfo.plclass == 0)
			{
			DrawPic(8, 80, R_RegisterPic('journf'));			
			}
			if (RepInfo.plclass == 1)
			{
			DrawPic(8, 80, R_RegisterPic('journc'));			
			}
			if (RepInfo.plclass == 2)
			{
			DrawPic(8, 80, R_RegisterPic('journm'));			
			}

			if ((RepInfo.codexag == 1)&&(GetCvar('JournalHints') == 1))
			{
				DrawText(160, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 0), va("Maybe a poet in Thystes knows what I seek."), CR_DARKGRAY );
			}
			
			if (RepInfo.codexag == 0)
			{
				DrawText(160, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 0), va("The following is an excerpt from the"), CR_TAN );
				DrawText(160, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 14), va("story \"Death of Legend\", written by"), CR_TAN );
				DrawText(160, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 28), va("Xenon, available in the Royal Library."), CR_TAN );
				DrawText(160, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 42), va(""), CR_TAN );
				DrawText(166, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 56), va("\"The stench of charred flesh was"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 70), va("thick upon the air, grit and blood"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 84), va("mixed strewn across the floor as"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 98), va("the warrior readied himself for"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 112), va("another charge. Before him milled"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 126), va("the legions of the damned, the"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 140), va("last barrier between him and the"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 154), va("end of his quest; beyond them lay"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 168), va("the Serpent Rider, the demon that"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 182), va("had heartlessly reigned as tyrant"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 196), va("over his once proud world. They"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 210), va("snarled, steel armour unable to"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 224), va("disguise the disfigured men"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 238), va("beneath, nor the carnage capable"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 252), va("of hiding the sweet sickness of"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 266), va("decay. A dark mass, it edged its"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 280), va("way slowly across the chamber of"), CR_TAN );
				DrawText(174, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 294), va("stone to the symphony of battle...\""), CR_TAN );
			}	
		}
	}

}

//==========================================================================
//
//  OnDestroy
//
//==========================================================================

void OnDestroy()
{
	::OnDestroy();

	ClientGame(ClGame).HideCodexLiterature();


}


defaultproperties
{
	X = 0;
	Y = 0;
	Width = 640;
	Height = 480;
	TitleX = 320;
	ChoicesStartX = 85;
	ChoicesStartY = 130;
/*	ScaleX = 2.0;
	ScaleY = 2.4;*/
	Title = "Literature";
}
