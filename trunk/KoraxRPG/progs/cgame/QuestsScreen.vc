class QuestsScreen : KRPGMenuScreen;


const int
	TABLE_HEAD_Y		= 72,
	TABLE_STRING_DELTA	= 14;


//==========================================================================
//
//  OnDraw
//
//==========================================================================

 void OnDraw()
{
	::OnDraw();

	SetFont('smallfont');
	SetTextAlign(hleft, vtop);
	DrawPic(0, 0, R_RegisterPic('journal'));
	ShadeRect(12, 78, 113, 289, GetCvarF('0.000000'));
	
// place for ca. 52 chars per line in the main body

	DrawText(160, TABLE_HEAD_Y + TABLE_STRING_DELTA, va("Pick a quest category from the left." ) );

	
