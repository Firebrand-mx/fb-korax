void OnVisibilityChanged(bool bNewVisibility)
{
	::OnVisibilityChanged(bNewVisibility);

	bTickEnabled = bNewVisibility;

	print("TravelMap::OnVisibilityChanged : %i", bNewVisibility);

	if (bNewVisibility)
	{
		TM_Init();
	}
	else
	{
		TM_Release();
	}
}

