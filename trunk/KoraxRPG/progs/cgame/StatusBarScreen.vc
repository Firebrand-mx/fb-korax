//	SB_DrawKeyBar
//
//==========================================================================

void SB_DrawKeyBar()
{
	int i;
	int num;
	Inventory Item;

	SB_DrawBackground();
	DrawPic(BAR_X + 38, BAR_Y + 1, pic_keybar);

//[Korax]
	SB_DrawNumber9(440, BAR_Y + 5, 0 + cl.sp_power, 1);
	SB_DrawNumber9(470, BAR_Y + 5, 0 + cl.maxsp_power, 0);

	SB_DrawNumber9(118, BAR_Y + 5, 0 + cl.exp_level, 0);
//	SB_DrawNumber9(460, 20, 0 + cl.experience, 1);
//	SB_DrawNumber9(580, 20, 0 + cl.next_level, 0);
	// [FB] Draw the 'next level' shaded bar
	ShadeRect(91, 461, 60 - (60 * (cl.experience / cl.next_level)), 3, 0.99);


	// Frags / health
	if (ClGame.deathmatch)
	{
		DrawPic(BAR_X + 3, BAR_Y + 1, pic_kills);
		SB_DrawNumber9(BAR_X + 4, BAR_Y + 15, cl.Frags, 0);
	}
	else
	{
		if (sb_health >= 25)
		{
			SB_DrawNumber9(BAR_X + 4, BAR_Y + 15, sb_health, 0);
		}
		else
		{
			SB_DrawNumber9(BAR_X + 4, BAR_Y + 15, sb_health, 1);
		}
	}

	//  Keys
	Item = EntityEx(cl.MO).Inventory;
	for (num = 0; Item && num < 5; Item = Item.Inventory)
	{
		if (Key(Item))
		{
			DrawPic(BAR_X + 46 + num * 20, BAR_Y + 3,
				R_RegisterPic(Item.IconName));
			num++;
		}
	}

	//  Armor
	HexenArmor HArmor = HexenArmor(EntityEx(cl.MO).FindInventory(
		HexenArmor));
	for (i = 0; i < 4; i++)
	{
		float ArmorPerc;
		if (!HArmor || !HArmor.Slots[i])
		{
			continue;
		}
		else if (HArmor.Slots[i] <= (HArmor.SlotsIncrement[i] / 4.0))
		{
			ArmorPerc = 0.333;
		}
		else if (HArmor.Slots[i] <= (HArmor.SlotsIncrement[i] / 2.0))
		{
			ArmorPerc = 0.666;
		}
		else
		{
			ArmorPerc = 1.0;
		}
		DrawPic(BAR_X + 150 + 31 * i, BAR_Y + 3, pic_armor[i], ArmorPerc);
	}

	// [FB] Active Spell
	if (cl.SpellPtr)
	{
		DrawPic(BAR_X + 363, BAR_Y + 2, R_RegisterPic(cl.SpellPtr.IconName));
	}

	if (cl.SpellTime)
	{
		//  Spell List
		Inventory SplItem = Inventory(cl.SpellFirst);
		for (i = 0; i < 7; i++)
		{
			DrawPic(212 + i * 31, 414, pic_artibox, 0.6);
			if (SplItem)
			{
				DrawPic(211 + i * 31, 413,	R_RegisterPic(SplItem.IconName));
				if (SplItem == Inventory(cl.SpellPtr))
				{
					DrawPic(212 + i * 31, 413, pic_selectbox, 0.6);
				}
				SplItem = SplItem.NextSpl();
			}
		}
		if (cl.SpellFirst && cl.SpellFirst.PrevSpl())
		{
			DrawPic(202, 413, pic_invgeml[!(ClGame.GLevel.TicTime & 4) ? 0 : 1], 0.6);
		}
		if (SplItem)
		{
			DrawPic(430, 413, pic_invgemr[!(ClGame.GLevel.TicTime & 4) ? 0 : 1], 0.6);
		}
	}
}

