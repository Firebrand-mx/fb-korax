//==========================================================================
//
//	StatsOverview
//
//==========================================================================

void StatsOverview(Object Sender)
{
	UpgradeScreen US;
	
	US = UpgradeScreen(ClGame.SpawnMenu(UpgradeScreen));
	US.X = 60;
	US.Y = 50;
	ClGame.PushMenuScreen(US);
}

//==========================================================================
//
//	ModifyArsenal
//
//==========================================================================

void ModifyArsenal(Object Sender)
{
	ArsenalScreen AS;
	
	AS = ArsenalScreen(ClGame.SpawnMenu(ArsenalScreen));
	AS.X = 60;
	AS.Y = 50;
	ClGame.PushMenuScreen(AS);
}

//==========================================================================
//
//	OnKeyDown
//
//==========================================================================

bool OnKeyDown(int key)
{
	::OnKeyDown(key);

	switch (key)
	{
	case K_PAGEDOWN:
		CycleNextChoice();
		LocalSound('menu/cursor');
		return true;

	case K_PAGEUP:
		CyclePrevChoice();
		LocalSound('menu/cursor');
		return true;

	case K_ESCAPE:
	case K_MOUSE2:
		ClGame.PopMenu();
		return true;
	}
}

