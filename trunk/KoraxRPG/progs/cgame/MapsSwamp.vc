class MapsSwamp : KRPGMenuScreen;

KRPGPlayerReplicationInfo RepInfo;

const int
	TABLE_HEAD_Y		= 68,
	TABLE_STRING_DELTA	= 14;


//==========================================================================
//
//	CyclePrevChoice
//
//==========================================================================

void CyclePrevChoice()
{
}

//==========================================================================
//
//	CycleNextChoice
//
//==========================================================================

void CycleNextChoice()
{
}

//==========================================================================
//
//  OnDraw
//
//==========================================================================

void OnDraw()
{
	DrawPic(0, 0, R_RegisterPic('journal'));

	foreach ClGame.GLevel.LevelInfo.AllThinkers(KRPGPlayerReplicationInfo, RepInfo)
	{
		if (ClGame.cl.ClientNum == RepInfo.PlayerNum)
		{
		
			if (RepInfo.plclass == 0)
			{
			DrawPic(8, 80, R_RegisterPic('journf'));			
			}
			if (RepInfo.plclass == 1)
			{
			DrawPic(8, 80, R_RegisterPic('journc'));			
			}
			if (RepInfo.plclass == 2)
			{
			DrawPic(8, 80, R_RegisterPic('journm'));			
			}

		if (RepInfo.maptrackfa == 1 && RepInfo.maptrackfb == 1 && RepInfo.maptrackfc == 1 && RepInfo.maptrackfd == 1 && RepInfo.maptrackfe == 1 )
		{
			DrawPic(160, 82, R_RegisterPic('jmapfz'));
		}	
			
		else if (RepInfo.maptrackfa == 1)	
		{
			DrawPic(160, 82, R_RegisterPic('jmapfa'));
			
			if (RepInfo.maptrackfb == 1)
			{
			DrawPic(160, 82, R_RegisterPic('jmapfb'));
			}
			
			if (RepInfo.maptrackfc == 1)
			{
			DrawPic(160, 82, R_RegisterPic('jmapfc'));
			}
			
			if (RepInfo.maptrackfd == 1)
			{
			DrawPic(160, 82, R_RegisterPic('jmapfd'));
			}
			
			if (RepInfo.maptrackfe == 1)
			{
			DrawPic(160, 82, R_RegisterPic('jmapfe'));
			}
			
		}	
		else
		{
			DrawText(160, 82, va("I should check whether someone in Joral"), CR_BLACK);
			DrawText(160, 96, va("might be selling a map of this area."), CR_BLACK);
		}
		
	}
}


	
}

//==========================================================================
//
//  OnDestroy
//
//==========================================================================

void OnDestroy()
{
	::OnDestroy();

	ClientGame(ClGame).HideMapsSwamp();

}


defaultproperties
{
	X = 0;
	Y = 0;
	Width = 640;
	Height = 480;
	TitleX = 320;
	ChoicesStartX = 85;
	ChoicesStartY = 130;
/*	ScaleX = 2.0;
	ScaleY = 2.4;*/
	Title = "map of the northwestern swamp";
}
