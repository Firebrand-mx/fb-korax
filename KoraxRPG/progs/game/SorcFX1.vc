class SorcFX1 : Projectile;

//==========================================================================
//
//  FloorBounceMissile
//
//==========================================================================

void FloorBounceMissile()
{
	Velocity.z = -Velocity.z;	// no energy absorbed
	Velocity.x = 2.0 * Velocity.x / 3.0;
	Velocity.y = 2.0 * Velocity.y / 3.0;
	if (SightSound)
	{
		PlaySound(SightSound, CHAN_VOICE);
	}
}

//==========================================================================
//
//	GetExplodeParms
//
//==========================================================================

void GetExplodeParms(out int damage, out float distance, out byte damageSelf)
{
	// Sorcerer spell 1
	damage = 30;
}

//==========================================================================
//
//  A_SorcFX1Seek
//
//  Yellow spell - offense
//
//==========================================================================

final void A_SorcFX1Seek()
{
	if (Args[4]-- <= 0)
	{
		if (Args[3]-- <= 0)
		{
			SetState(DeathState);
			PlaySound('SorcererHeadScream', CHAN_VOICE, 1.0, ATTN_NONE);
		}
		else
		{
			Args[4] = Heresiarch::BOUNCE_TIME_UNIT;
		}
	}

	SeekerMissile(2.0, 6.0);
}

__states__
{
	S_SORCFX1_1('SBS1', 0 | FF_FULLBRIGHT, 2.0 / 35.0, S_SORCFX1_2) = none
	S_SORCFX1_2('SBS1', 1 | FF_FULLBRIGHT, 3.0 / 35.0, S_SORCFX1_3) = A_SorcFX1Seek
	S_SORCFX1_3('SBS1', 2 | FF_FULLBRIGHT, 3.0 / 35.0, S_SORCFX1_4) = A_SorcFX1Seek
	S_SORCFX1_4('SBS1', 3 | FF_FULLBRIGHT, 3.0 / 35.0, S_SORCFX1_1) = A_SorcFX1Seek
	S_SORCFX1_D1('FHFX', 18 | FF_FULLBRIGHT, 2.0 / 35.0, S_SORCFX1_D2) = A_Explode
	S_SORCFX1_D2('FHFX', 18 | FF_FULLBRIGHT, 6.0 / 35.0, S_SORCFX1_D3) = none
	S_SORCFX1_D3('FHFX', 18 | FF_FULLBRIGHT, 6.0 / 35.0, none) = none
}

