class CWeapFlame : ClericWeapon
	__mobjinfo__(8009);

//============================================================================
//
//  A_CFlameAttack
//
//============================================================================

final void A_CFlameAttack()
{
	EntityEx mo;

	mo = Actor(Owner).SpawnPlayerMissile(CFlameMissile);
	if (mo)
	{
		Actor(mo)._Special1 = 2;
	}

	Owner.PlaySound('ClericFlameFire', CHAN_WEAPON);
	DepleteAmmoEx();
}

