class KRPGPlayerPawn : PlayerPawn
	abstract;

int InitialHealth;
int InitialSpiritPower;
int InitialStrength;
int InitialVitality;
int InitialIntelligence;
int InitialWisdom;
int InitialSpeed;

int MaxStrength;
int MaxVitality;
int MaxIntelligence;
int MaxWisdom;
int MaxSpeed;

int experience;

// [CW] Just a thought -- should monsters have these?
float			StandHeight;
float			DuckHeight;

//==========================================================================
//
//	AddInventory
//
//==========================================================================

void AddInventory(Inventory Item)
{
	::AddInventory(Item);
	if (KRPGInventory(Item))
	{
		KRPGPlayerBase(Player).AddInventory(KRPGInventory(Item));
	}
}

//==========================================================================
//
//	RemoveInventory
//
//==========================================================================

void RemoveInventory(Inventory Item)
{
	::RemoveInventory(Item);
	if (KRPGInventory(Item))
	{
		KRPGPlayerBase(Player).RemoveInventory(KRPGInventory(Item));
	}
}

//===========================================================================
//
//  StandUp
//
//===========================================================================

void StandUp(float deltaTime)
{
	if (Height < StandHeight)
	{
		Height += 128.0 * deltaTime;
		if (Height > StandHeight)
			Height = StandHeight;
	}
}

//===========================================================================
//
//  BendDown
//
//===========================================================================

void BendDown(float deltaTime)
{
	if (Height > DuckHeight)
	{
		Height -= 128.0 * deltaTime;
		if (Height < DuckHeight)
			Height = DuckHeight;
	}
}

defaultproperties
{
	bNeverTarget = false;

	bNonScalable = true;
	bCombatant = true;
	bLiving = true;
	bCanRide = true;

	Team = KRPGDefs::TEAM_PLAYER;
}
