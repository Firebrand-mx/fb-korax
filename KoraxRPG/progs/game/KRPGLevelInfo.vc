//==========================================================================
//
//	EV_ActorUseLine
//
//  Simulates using of tagged line by activator
//
//==========================================================================

bool EV_ActorUseLine(Actor Activator, int LineId)
{
    bool success = false;
    int			Searcher;
	line_t*		Other;

	Searcher = -1;
	for (Other = XLevel.FindLine(LineId, &Searcher); Other;
		Other = XLevel.FindLine(LineId, &Searcher))
	{
        LineSpecialLevelInfo(Level).ActivateLine(Other, Activator, 0, SPAC_Use);
        success = true;
    }

    return success;
}

//==========================================================================
//
//	EV_ActorUseThing
//
//  Simulates using of tagged actor by activator
//
//==========================================================================

bool EV_ActorUseThing(Actor Activator, int TID)
{
    bool success = false;
    Entity E;
	for (E = Entity(FindMobjFromTID(TID, none)); E;
			E = Entity(FindMobjFromTID(TID, E)))
	{
		if (E.IsA('Actor'))
        {
            Activator.UseThing(Actor(E));
            success = true;
        }
	}

    return success;
}

