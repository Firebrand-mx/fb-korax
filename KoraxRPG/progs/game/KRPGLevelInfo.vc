			if (PN_Candidate.Args[PathNode::ARG__PATHINDEX] == PathIndex &&
					PN_Candidate.Args[PathNode::ARG__NODEINDEX] == PNIndex - 1)
			{
				PN_Base.BW = PN_Candidate;
				bPNLinked = true;
				break;
