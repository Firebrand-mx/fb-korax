class ZXmasTree : BurnableTree
	__mobjinfo__(8068);

//==========================================================================
//
//	GetExplodeParms
//
//==========================================================================

void GetExplodeParms(out int damage, out float distance, out byte damageSelf)
{
	damage = 30;
	distance = 64.0;
}

states
{
Spawn:
	XMAS A -1
	Stop
Death:
	XMAS A 4 A_TreeDeath
	Goto Spawn
Melee:
	XMAS B 6 Bright
	XMAS C 6 Bright A_Scream
	XMAS D 5 Bright
	XMAS E 5 Bright A_Explode
	XMAS F 5 Bright
	XMAS G 4 Bright
	XMAS H 5
	XMAS I 4 A_NoBlocking
	XMAS J 4
	XMAS K -1
	Stop
}

defaultproperties
{
	Health = 20;
	Radius = 11.0;
	Height = 130.0;
	DeathSound = 'TreeExplode';
}
