class ZCorpseLynchedNoHeart : Decoration
	__mobjinfo__(109);

//==========================================================================
//
//  BeginPlay
//
//==========================================================================

void BeginPlay()
{
	::BeginPlay();
	// Special stuff
	Spawn(BloodPool, vector(Origin.x, Origin.y, ONFLOORZ));
}

//==========================================================================
//
//  A_CorpseBloodDrip
//
//==========================================================================

final void A_CorpseBloodDrip()
{
	if (Random() > 0.5)
	{
		return;
	}
	Spawn(CorpseBloodDrip, Origin + vector(0.0, 0.0, Height / 2.0));
}

states
{
Spawn:
	CPS5 A 140 A_CorpseBloodDrip
	Wait
}

defaultproperties
{
	Radius = 10.0;
	Height = 100.0;
	bSolid = true;
	bSpawnCeiling = true;
	bNoGravity = true;
}
