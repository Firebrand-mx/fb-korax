class WraithBuried : Wraith
	__mobjinfo__(10011)
	__scriptid__(9);

//==========================================================================
//
//  A_WraithRaiseInit
//
//==========================================================================

final void A_WraithRaiseInit()
{
	bInvisible = false;
	bDontBlast = false;
	bNonShootable = false;
	bShootable = true;
	bSolid = true;
	FloorClip = Height;
}

//============================================================================
//
//  RaiseFromFloor
//
//  Raise incrementally from the floor
// 
//============================================================================

bool RaiseFromFloor()
{
	bool done;

	done = true;
	// Raise a mobj from the ground
	if (FloorClip > 0.0)
	{
		FloorClip -= 2.0;
		if (FloorClip <= 0.0)
		{
			FloorClip = 0.0;
			done = true;
		}
		else
		{
			done = false;
		}
	}
	return done;	// Reached target height
}

//==========================================================================
//
//  A_WraithRaise
//
//==========================================================================

final void A_WraithRaise()
{
	if (RaiseFromFloor())
	{
		// Reached it's target height
		SetState(FindClassState(Wraith, 'See'));
	}

	SpawnDirt(Radius);
}

states
{
Spawn:
	Goto Super::Spawn+2
See:
	WRTH A 2 A_WraithRaiseInit
	WRTH A 2 A_WraithRaise
	WRTH A 2 A_FaceTarget
	WRTH BB 2 A_WraithRaise
	Goto See+1
}

defaultproperties
{
	Height = 68.0;
	bSolid = false;
	bInvisible = true;
	bShootable = false;
	bDontBlast = true;
	bStayMorphed = true;
}
