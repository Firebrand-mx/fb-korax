class KoraxBolt : Fragment;

float BoltHeight;

int LifeTime;

//==========================================================================
//
//  A_KBoltRaise
//
//==========================================================================

final void A_KBoltRaise()
{
	float z;

	// Spawn a child upward
	z = Origin.z + BoltHeight;

	if (z + BoltHeight < CeilingZ)
	{
		Spawn(KoraxBolt, vector(Origin.x, Origin.y, z));
	}
	else
	{
		// Maybe cap it off here
	}
}

//==========================================================================
//
//  A_KBolt
//
//==========================================================================

final void A_KBolt()
{
	// Countdown lifetime
	if (LifeTime-- <= 0)
	{
		SetState(none);
	}
}

states
{
Spawn:
	MLFX I 2 Bright
	MLFX J 2 Bright A_KBoltRaise
	MLFX IJKLM 2 Bright A_KBolt
	Goto Spawn+2
}

defaultproperties
{
	RenderStyle = STYLE_Add;
	Radius = 15.0;
	Height = 35.0;
	LifeTime = 3;
	BoltHeight = 48.0;
	DLightColour = RGB(58, 158, 239);
	DLightRadius = 126.0;
}
