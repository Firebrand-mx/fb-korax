//	A_BishopSpawnBlurAI
//
//==========================================================================

final void A_BishopSpawnBlurAI()
{
	Actor blur;

	if (!--Special1 || Special1 < 0)
	{
		Velocity.x = 0.0;
		Velocity.y = 0.0;
		
		if (P_Random() > 96 || !ConsiderAttack())
		{
			SetState(SeeState);
		}
	}
	blur = Spawn(BishopBlur, Origin);
	if (blur)
	{
		blur.Angles = Angles;
	}
}

