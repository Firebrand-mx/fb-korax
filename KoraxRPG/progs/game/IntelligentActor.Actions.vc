//==========================================================================
//
//  A_SerpentCheckForAttackAI
//
//==========================================================================

final void A_SerpentCheckForAttackAI()
{
	if (!Target || !CanSense(Target))
	{
		return;
	}
	if (MissileState && !CheckMeleeRange())
	{
		SetState(FindState('Attack'));
		return;
	}
	if (CheckMeleeRange2())
	{
		SetState(FindState('Walk'));
	}
	else if (CheckMeleeRange())
	{
		if (P_Random() < 32)
		{
			SetState(FindState('Walk'));
		}
		else
		{
			SetState(FindState('Attack'));
		}
	}
}

