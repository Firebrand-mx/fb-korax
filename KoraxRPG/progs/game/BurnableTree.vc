class BurnableTree : Decoration
	abstract;

//===========================================================================
//
//  A_TreeDeath
//
//===========================================================================

final void A_TreeDeath()
{
	if (DamageType != 'Fire')
	{
		Height *= 4.0;
		bShootable = true;
		bDropOff = false;
		bCorpse = false;
		Health = 35;
		return;
	}
	else
	{
		bDynamicLight = true;
		DLightColour = RGB(255, 127, 0);
		SetState(MeleeState);
		SendExplosion(DLightColour, Origin);
	}
}

defaultproperties
{
	Mass = 99999.0;
	bSolid = true;
	bShootable = true;
	bNoBlood = true;
}
