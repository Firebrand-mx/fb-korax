	return ReadyWeapon.bExtremeDeath;
}

//==========================================================================
//
//  GetInvulnerabilityMode
//
//==========================================================================

name GetInvulnerabilityMode()
{
	switch (PClass)
	{
	case HexenDefs::PCLASS_CLERIC:
		return 'Ghost';
	case HexenDefs::PCLASS_MAGE:
		return 'Reflective';
	}
	return '';
}

