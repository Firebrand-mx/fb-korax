//==========================================================================
//
//  GiveExperience
//
//==========================================================================

void GiveExperience(int Exp, optional bool bIgnoreExpModifier)
{
	// [FB] Multiply experience by game's exp modifier
	experience += Exp;
	if(experience > 2100000666)
	{
		experience = 2100000666;
		next_level = 2100000999;
	}
	Actor(MO).experience = experience;
	while (experience >= next_level && PClass != HexenDefs::PCLASS_PIG)
	{
		ActivateLevel(exp_level + 1);
	}
}

//==========================================================================
//
//  GiveLevels
//
//==========================================================================

void GiveLevels(int levels)
{
	// [CW] This should give extra experience enouph to reach next levels
	// regardless of game experience modifier;
	// the experience earned since last level should be still kept, otherwise
	// players may think it is unfair and try to cheat;
	int exp_bak = experience;
	while (levels--)
	{
		GiveExperience(next_level - experience, true);
	}
	// [FB] Reset experience counter to zero, but add any remaining exp
	// 		points to it...
	experience = 0;
	experience += (next_level - exp_bak);
}

