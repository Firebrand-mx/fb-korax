//==========================================================================
//
//  UpdateStats
//
//==========================================================================

void UpdateStats(int n_strength, int n_constitution, int n_dexterity, int n_intelligence,
		int n_wisdom, int n_charisma)
{
	strength += n_strength;
	constitution += n_constitution;
	dexterity += n_dexterity;
	intelligence += n_intelligence;
	wisdom += n_wisdom;
	charisma += n_charisma;
	
	//	Update armor save percentages.
	BasicArmor Armor = BasicArmor(EntityEx(MO).FindInventory(BasicArmor));
	if (Armor && Armor.Amount)
	{
		Armor.SavePercent = 0.335 + itof(constitution) * 0.4;
		if (Armor.SavePercent > 0.75)
		{
			Armor.SavePercent = 0.75;
		}
	}

	//	Update player's weapon speed.
	float Value;
	if (MorphTime)
	{
		Value = (itof(strength) * 0.25) / 100.0;
	}
	else
	{
		Value = (itof(strength) * 0.5) / 100.0;
	}
	PlayerPawn(MO).ForwardMove1 += Value;
	PlayerPawn(MO).ForwardMove2 += Value;
	PlayerPawn(MO).SideMove1 += Value;
	PlayerPawn(MO).SideMove2 += Value;
}

