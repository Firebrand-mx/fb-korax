class MenuChoice_PClass : MenuChoiceEnum;

int GetInitialValue()
{
	return GetCvar('class');
}

bool SetNewValue(int newValue)
{
	SetCvar('class', newValue);
	MenuScreenPlayerSetup(Parent).SetPClass(newValue);
	return true;
}

void InitWindow()
{
	::InitWindow();
	MenuScreenPlayerSetup(Parent).SetPClass(Value);
}

defaultproperties
{
	Text = "Class";
	bLeftAlign = true;
	EnumNames[0] = "fighter";
	EnumNames[1] = "cleric";
	EnumNames[2] = "mage";
}
