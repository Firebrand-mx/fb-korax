class MenuScreenAdvancedVideoOptions : MenuScreen;

enum
{
	DRV_SOFTWARE,
	DRV_OPENGL,
	DRV_DIRECT3D
};

void InitWindow()
{
	switch (GetCvar('_driver'))
	{
	case DRV_SOFTWARE:
		Choices[5] = MenuChoice_ColouredLights;
		Choices[6] = MenuChoice_SpanDrawing;
		break;

	case DRV_OPENGL:
		Choices[5] = MenuChoice_AddLights;
		Choices[6] = MenuChoice_SpecularLevel;
		Choices[7] = MenuChoice_GLBlendSprites;
		Choices[8] = MenuChoice_GLTextureFilter;
		Choices[9] = MenuChoice_GLModelLights;
		Choices[10] = MenuChoice_GLSpecular;
		break;

	case DRV_DIRECT3D:
		Choices[5] = MenuChoice_AddLights;
		Choices[6] = MenuChoice_SpecularLevel;
		Choices[7] = MenuChoice_D3DBlendSprites;
		Choices[8] = MenuChoice_D3DTextureFilter;
		Choices[9] = MenuChoice_D3DDither;
		Choices[10] = MenuChoice_D3DModelLights;
		Choices[11] = MenuChoice_D3DSpecular;
		break;
	}
	::InitWindow();
}

defaultproperties
{
	Choices[0] = MenuChoice_DarkenLights;
	Choices[1] = MenuChoice_ExtraSamples;
	Choices[2] = MenuChoice_DynamicLights;
	Choices[3] = MenuChoice_ClipLights;
	Choices[4] = MenuChoice_AspectRatio;

	ChoicesStartX = 160;
	ChoicesStartY = 26;
	SelectorType = MenuSelector_SmallRight;
	Title = "ADVANCED VIDEO OPTIONS";
}
