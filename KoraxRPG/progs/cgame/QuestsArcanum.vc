		{
			DrawText(160, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 140), va("Zetelar in his tower workshop looked up from his studies"), CR_BROWN );
			DrawText(160, TABLE_HEAD_Y + (TABLE_STRING_DELTA + 156), va("just long enough to tell me about the underground enigma"), CR_BROWN );
