class MenuSpriteAnim : MenuObject;

int SprDef;
int Speed;
int NumFrames;
int Translation;
float Time;

void InitWindow()
{
	::InitWindow();
	bTickEnabled = true;
	Disable();
}

void Tick(float DeltaTime)
{
	Time += DeltaTime;
}

void DrawWindow(GC gc)
{
	int frame = ftoi(Time * itof(Speed)) % NumFrames;

	R_DrawSpritePatch(ftoi(gc.ClipRect.OriginX), ftoi(gc.ClipRect.OriginY),
		SprDef, frame, 0, Translation);
}

