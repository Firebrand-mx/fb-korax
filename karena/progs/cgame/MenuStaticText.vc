class MenuStaticText : Widget;

string Text;

void OnCreate()
{
	::OnCreate();
	Disable();
}

void OnDraw()
{
	SetTextAlign(hleft, vtop);
	DrawText(0, 0, Text);
}

defaultproperties
{
	Width = 320;
	Height = 200;
}
