class MenuTitleText : Widget;

string Text;

void OnCreate()
{
	::OnCreate();
	Disable();
}

void OnDraw()
{
	SetFont(font_big);
	SetTextAlign(hcentre, vbottom);
	DrawText(0, 0, Text);
}

defaultproperties
{
	Width = 320;
	Height = 200;
}
