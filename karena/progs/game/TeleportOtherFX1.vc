class TeleportOtherFX1 : Projectile;

//==========================================================================
//
//  InflictorModifyDamage
//
//==========================================================================

int InflictorModifyDamage(Actor victim, Actor source, int damage)
{
//[Korax]
	if (victim.bCountKill && _Special1 == 1)
	{
		//no special fix required
	} 
	else if (victim.bCountKill && !victim.bBoss && !Serpent(victim))
	{
		victim.TeleportOther();
		return -1;
	}
	return damage;
}

//==========================================================================
//
//  A_TeloSpawnA
//
//==========================================================================

void A_TeloSpawnA()
{
	Actor A;

	A = Spawn(TeleportOtherFX2, Origin);
	if (A)
	{
		A.Angles.yaw = Angles.yaw;
		A.Instigator = Instigator;
		A.Velocity = Velocity / 2.0;
		A._Special1 = _Special1;
	}
}

