class EttinMace : Carcas;

//==========================================================================
//
//  A_CheckFloor
//
//  Checks if an object hit the floor
//
//==========================================================================

final void A_CheckFloor()
{
	if (Origin.z <= FloorZ)
	{
		Origin.z = FloorZ;
		Gravity = 1.0;
		SetState(DeathState);
	}
}

states
{
Spawn:
	ETTB MNOP 5 A_CheckFloor
	Loop
Death:
	ETTB Q 5
	ETTB R 5 A_QueueCorpse
	ETTB S -1
	Stop
}

defaultproperties
{
	Radius = 5.0;
	Height = 5.0;
}
