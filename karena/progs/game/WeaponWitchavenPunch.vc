	S_WPUNCHREADY('WPCH', 0, 1.0 / 35.0, S_WPUNCHREADY) { A_WeaponReady(); }
	S_WPUNCHDOWN('WPCH', 0, 1.0 / 35.0, S_WPUNCHDOWN) { A_Lower(); }
	S_WPUNCHUP('WPCH', 0, 1.0 / 35.0, S_WPUNCHUP) { A_Raise(); }
