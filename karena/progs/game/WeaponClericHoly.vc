class WeaponClericHoly : Weapon;

//============================================================================
//
//  A_CHolyAttack
//
//============================================================================

final void A_CHolyAttack()
{
	EntityEx	A;
	EntityEx	AimTarget;

	UseWeaponMana();
	A = Actor(Owner).SpawnPlayerMissileEx(HolyMissile, false, AimTarget);
	if (A)
	{
		A.Tracer = AimTarget;
	}
	Player(Owner.Player).DamageFlash = 0.0;
	Player(Owner.Player).BonusFlash = 0.0;
	Player(Owner.Player).WeaponCShift = RGBA(255, 255, 255, 66);
	Owner.PlaySound('HolySymbolFire', CHAN_WEAPON);
}

//============================================================================
//
//  A_CHolyPalette1
//
//============================================================================

final void A_CHolyPalette1()
{
	Player(Owner.Player).WeaponCShift = RGBA(255, 255, 255, 51);
}

//============================================================================
//
//  A_CHolyPalette2
//
//============================================================================

final void A_CHolyPalette2()
{
	Player(Owner.Player).WeaponCShift = RGBA(255, 255, 255, 36);
}

//============================================================================
//
//  A_CHolyPalette3
//
//============================================================================

final void A_CHolyPalette3()
{
	// reset back to original playpal
	Player(Owner.Player).WeaponCShift = 0;
}

__states__
{
	S_CHOLYREADY('CHLY', 0, 1.0 / 35.0, S_CHOLYREADY) = A_WeaponReady
	S_CHOLYDOWN('CHLY', 0, 1.0 / 35.0, S_CHOLYDOWN) = A_Lower
	S_CHOLYUP('CHLY', 0, 1.0 / 35.0, S_CHOLYUP) = A_Raise
	S_CHOLYATK_1('CHLY', 0 | FF_FULLBRIGHT, 1.0 / 35.0, S_CHOLYATK_2, 0, 40) = none
	S_CHOLYATK_2('CHLY', 1 | FF_FULLBRIGHT, 1.0 / 35.0, S_CHOLYATK_3, 0, 40) = none
	S_CHOLYATK_3('CHLY', 2 | FF_FULLBRIGHT, 2.0 / 35.0, S_CHOLYATK_4, 0, 43) = none
	S_CHOLYATK_4('CHLY', 3 | FF_FULLBRIGHT, 2.0 / 35.0, S_CHOLYATK_5, 0, 43) = none
	S_CHOLYATK_5('CHLY', 4 | FF_FULLBRIGHT, 2.0 / 35.0, S_CHOLYATK_6, 0, 45) = none
	S_CHOLYATK_6('CHLY', 5 | FF_FULLBRIGHT, 6.0 / 35.0, S_CHOLYATK_7, 0, 48) = A_CHolyAttack
	S_CHOLYATK_7('CHLY', 6 | FF_FULLBRIGHT, 2.0 / 35.0, S_CHOLYATK_8, 0, 40) = A_CHolyPalette1
	S_CHOLYATK_8('CHLY', 6 | FF_FULLBRIGHT, 2.0 / 35.0, S_CHOLYATK_9, 0, 40) = A_CHolyPalette2
	S_CHOLYATK_9('CHLY', 6 | FF_FULLBRIGHT, 2.0 / 35.0, S_CHOLYREADY, 0, 36) = A_CHolyPalette3
}

