class ClericStaffMissile : Projectile;

int WeaveXY;

//==========================================================================
//
//  DoSpecialDamage
//
//==========================================================================

int DoSpecialDamage(EntityEx victim, EntityEx source, int damage)
{
	// Cleric Serpent Staff does poison damage
	if (victim.bIsPlayer)
	{
		Actor(victim).PoisonPlayer(Actor(source), 20);
		damage >>= 1;
	}
	return damage;
}

//============================================================================
//
//  A_CStaffMissileSlither
//
//============================================================================

final void A_CStaffMissileSlither()
{
	float newX, newY;
	float angle;

	angle = AngleMod360(Angles.yaw + 90.0);
	newX = Origin.x - cos(angle) * Level.Game.FloatBobOffsets[WeaveXY];
	newY = Origin.y - sin(angle) * Level.Game.FloatBobOffsets[WeaveXY];
	WeaveXY = (WeaveXY + 3) & 63;
	newX += cos(angle) * Level.Game.FloatBobOffsets[WeaveXY];
	newY += sin(angle) * Level.Game.FloatBobOffsets[WeaveXY];
	TryMove(vector(newX, newY, Origin.z));
}

states
{
Spawn:
	CSSF DDEE 1 Bright A_CStaffMissileSlither
	Loop
Death:
	CSSF FG 4 Bright
	CSSF HI 3 Bright
	Stop
}

defaultproperties
{
	Radius = 12.0;
	Height = 10.0;
	Speed = 770.0;
	MissileDamage = 5;
	DeathSound = 'ClericCStaffExplode';
	bDynamicLight = true;
	DLightColour = RGB(3, 234, 3);
	DLightRadius = 118.0;
	Obituary = "$ob_cstaff";
}
