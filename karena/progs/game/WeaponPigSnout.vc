class WeaponPigSnout : Weapon;

state SniffState;

//============================================================================
//
//  A_SnoutAttack
//
//============================================================================

final void A_SnoutAttack()
{
	int			damage;
	TAVec		angles;
	TVec		vforward;
	EntityEx	AimTarget;

	damage = 3 + (P_Random() & 3);
	angles = Owner.Angles;
	AimTarget = Actor(Owner).AimLineAttack(vforward, angles, MELEERANGE);
	MainGameInfo(Level.Game).PuffSpawned = none;
	Actor(Owner).LineAttack(vforward, MELEERANGE, damage, SnoutPuff);
	Owner.PlaySound((P_Random() & 1) ? 'PigActive2' : 'PigActive1',
		CHAN_VOICE);
	if (AimTarget)
	{
		Player(Owner.Player).AdjustPlayerAngle(AimTarget);
		if (MainGameInfo(Level.Game).PuffSpawned)
		{
			// Bit something
			Owner.PlaySound('PigAttack', CHAN_VOICE);
		}
	}
}

//==========================================================================
//
//	SnoutSniff
//
//==========================================================================

void SnoutSniff()
{
	Owner.Player.SetViewState(ps_weapon, SniffState);
}

__states__
{
	S_SNOUTREADY('WPIG', 0, 1.0 / 35.0, S_SNOUTREADY) = A_WeaponReady
	S_SNOUTDOWN('WPIG', 0, 1.0 / 35.0, S_SNOUTDOWN) = A_Lower
	S_SNOUTUP('WPIG', 0, 1.0 / 35.0, S_SNOUTUP) = A_Raise
	S_SNOUTATK1('WPIG', 0, 4.0 / 35.0, S_SNOUTATK2) = A_SnoutAttack
	S_SNOUTATK2('WPIG', 1, 8.0 / 35.0, S_SNOUTREADY) = A_SnoutAttack
	S_SNOUTSNIFF('WPIG', 1, 8.0 / 35.0, S_SNOUTREADY) = none
}

defaultproperties
{
	Mana = HexenDefs::MANA_NONE;
	UpState = S_SNOUTUP;
	DownState = S_SNOUTDOWN;
	ReadyState = S_SNOUTREADY;
	AttackState = S_SNOUTATK1;
	HoldAttackState = S_SNOUTATK1;
	SniffState = S_SNOUTSNIFF;
	PSpriteSY = 10.0;
	Obituary = "$ob_pigsnout";
}
