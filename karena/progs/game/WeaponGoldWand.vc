class WeaponGoldWand : Weapon;

//===========================================================================
//
//  A_FireGoldWandPL1
//
//===========================================================================

final void A_FireGoldWandPL1()
{
	TAVec angles;
	int damage;
	TVec dir;

	UseWeaponMana();
	damage = 10; //7 + (P_Random() & 7);
	if (int_mod)
	{
		if(!active_damage)
		{
			damage = damage * Player(Player).strength / 10;
		}
		else // [FB] PI Damage
		{
			damage = (damage * Player(Player).strength / 10) * ftoi(3.1415);
		}
	}
	angles = Player.MO.Angles;
	Actor(Player.MO).AimLineAttack(&angles, MISSILERANGE);
	AngleVector(&angles, &dir);
//	dir = Aim(Player.MO, Player.MO.Angles.yaw, 16.0 * 64.0);
	if (Player(Player).Refire)
	{
		VectorRotateAroundZ(&dir, (Random() - Random()) * 45.0 / 8.0);
	}
	Actor(Player.MO).LineAttack(dir, MISSILERANGE, damage, GoldWandPuff1);

	Player.MO.PlaySound('GoldWandFire', CHAN_WEAPON);
}

//===========================================================================
//
//  A_FireGoldWandPL2
//
//===========================================================================

final void A_FireGoldWandPL2()
{
	int i;
	int damage;
	float momz;
	TAVec angles;
	TVec dir;
	Actor mo;

	UseWeaponMana();
	angles = Player.MO.Angles;
	Actor(Player.MO).AimLineAttack(&angles, MISSILERANGE);
	AngleVector(&angles, &dir);
//	dir = Aim(Player.MO, Player.MO.Angles.yaw, 16.0 * 64.0);
//	VectorAngles(&dir, &angles);
	mo = Player(Player).SpawnPlayerMissileAngle(GoldWandMissile2,
		AngleMod360(angles.yaw - (45.0 / 8.0))/*, angles.pitch*/);
	if (mo && int_mod)
	{
		if(!active_damage)
		{
			mo.MissileDamage = mo.MissileDamage * Player(Player).intelligence / 10;
		}
		else // [FB] PI Damage
		{
			mo.MissileDamage = (mo.MissileDamage * Player(Player).intelligence / 10) * ftoi(3.1415);
		}

	}
	mo = Player(Player).SpawnPlayerMissileAngle(GoldWandMissile2,
		AngleMod360(angles.yaw + (45.0 / 8.0))/*, angles.pitch*/);
	if (mo && int_mod)
	{
		mo.MissileDamage = mo.MissileDamage *Player(Player).intelligence/10;
	}
	VectorRotateAroundZ(&dir, -45.0 / 8.0);
	for (i = 0; i < 5; i++)
	{
		damage = 20; //12 + (P_Random() & 7);
		if (int_mod)
		{
			if(!active_damage)
			{
				damage = damage * Player(Player).strength / 10;
			}
			else // [FB] PI Damage
			{
				damage = (damage * Player(Player).strength / 10) * ftoi(3.1415);
			}
		}
		Actor(Player.MO).LineAttack(dir, MISSILERANGE, damage, GoldWandPuff2);
		VectorRotateAroundZ(&dir, (45.0 / 8.0) / 2.0);
	}
	Player.MO.PlaySound('GoldWandFire', CHAN_WEAPON);
}

