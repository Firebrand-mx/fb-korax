class FireDemonRock1 : Fragment;

//============================================================================
//
//  A_SmBounce
//
//============================================================================

final void A_SmBounce()
{
	// give some more momentum (x,y,&z)
	Origin.z = FloorZ + 1.0;
	Velocity.z = (2.0 + Random() * 4.0) * 35.0;
	Velocity.x = Random() * 3.0 * 35.0;
	Velocity.y = Random() * 3.0 * 35.0;
}

states
{
Spawn:
	FDMN S 4
	Loop
Death:
	FDMN S 5 A_SmBounce
	//Fall through
XDeath:
	FDMN S 200
	Stop
}

defaultproperties
{
	GibsHealth = -500;
	Radius = 3.0;
	Height = 5.0;
	Mass = 16.0;
	bNoGravity = false;
}
