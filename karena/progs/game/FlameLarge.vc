//==========================================================================
//
//	Activate
//
//==========================================================================

bool Activate()
{
	PlaySound('Ignite', CHAN_VOICE);
	SetState(S_FLAME_LARGE1);
	bStaticLight = true;
	return true;
}

//==========================================================================
//
//	Deactivate
//
//==========================================================================

bool Deactivate()
{
	SetState(S_FLAME_LDORM1);
	bStaticLight = false;
	return true;
}

defaultproperties
{
	Translucency = 100;
	bNoTeleport = true;
	IdleState = S_FLAME_LARGE1;
	bStaticLight = true;
	LightColour = RGB(255, 255, 0);
}
