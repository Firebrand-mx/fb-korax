	S_ELECTRIC_BALL_FX1_1('WELH', 0 | FF_FULLBRIGHT, 4.0 / 35.0, S_ELECTRIC_BALL_FX1_2) { A_Damage(); }
	S_ELECTRIC_BALL_FX1_2('WELH', 1 | FF_FULLBRIGHT, 4.0 / 35.0, S_ELECTRIC_BALL_FX1_3) { A_Damage(); }
