	S_ELECTRIC_BALL_FX1_6('WELH', 5 | FF_FULLBRIGHT, 4.0 / 35.0, S_ELECTRIC_BALL_FX1_1) { A_Ticker(); }
	S_ELECTRIC_BALL_FX1_X1('WELH', 6 | FF_FULLBRIGHT, 4.0 / 35.0, S_ELECTRIC_BALL_FX1_X2) { }
