class HereticMummy : Actor
	__mobjinfo__(15011);

//==========================================================================
//
//  A_MummyAttack
//
//==========================================================================

final void A_MummyAttack()
{
	if (!Target)
	{
		return;
	}
	PlaySound(AttackSound, CHAN_WEAPON);
	if (CheckMeleeRange())
	{
		Target.Damage(self, self, HITDICE(2));
		PlaySound('MumyAttack2', CHAN_WEAPON);
		return;
	}
	PlaySound('MumyAttack1', CHAN_WEAPON);
}

//==========================================================================
//
//  A_MummySoul
//
//==========================================================================

final void A_MummySoul()
{
	Actor mo;

	mo = Spawn(HereticMummySoul, Origin + vector(0.0, 0.0, 10.0));
	mo.Velocity.z = 1.0 * 35.0;
}

states
{
Spawn:
	MUMM AB 10 A_Look
	Loop
See:
	MUMM ABCD 4 A_Chase
	Loop
Melee:
	MUMM E 6 A_FaceTarget
	MUMM F 6 A_MummyAttack
	MUMM G 6 A_FaceTarget
	Goto See
Pain:
	MUMM H 4
	MUMM H 4 A_Pain
	Goto See
Death:
	MUMM I 5
	MUMM J 5 A_Scream
	MUMM K 5 A_MummySoul
	MUMM L 5 A_NoBlocking
	MUMM M 5 A_QueueCorpse
	MUMM NO 5
	MUMM P -1
	Stop
Ice:
	MUMM Z 5 A_FreezeDeath
	MUMM Z 1 A_FreezeDeathChunks
	Wait
}

defaultproperties
