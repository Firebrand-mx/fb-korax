class FireBallMissile : Projectile;

//===========================================================================
//
//  FindEnemy
//
//===========================================================================

final void FindEnemy()
{
	Entity Other;

	foreach RoughBlockSearch(Other, 2)
	{
		EntityEx link = EntityEx(Other);

		if (!(link.bMonster || link.bIsPlayer) || link == Target ||
			link.bDormant)
		{
			continue;
		}
		if (!link.bShootable)
		{
			continue;
		}
		if (Level.Game.netgame && !Level.Game.deathmatch && link.bIsPlayer)
		{
			continue;
		}
		if (MainGameInfo(Level.Game).GameModel && 
			MainGameInfo(Level.Game).GameModel.TeamFactor(Target, link))
		{
			continue;
		}
		if (MainGameInfo(Level.Game).GameType >= HexenDefs::NUMGAMESNOTEAM &&
			link.bIsPlayer && Player(Target.Player).Colour == Player(link.Player).Colour)
		{
			continue;
		}
		if (CanSee(link))
		{
			float angle = AngleMod360(atan2(
				link.Origin.y - Target.Origin.y,
				link.Origin.x - Target.Origin.x) -
				Target.Angles.yaw);
			if (angle > 226.0 * 360.0 / 256.0 ||
				angle < 30.0 * 360.0 / 256.0)
			{
				Tracer = link;
				return;
			}
		}
	}
}

//==========================================================================
//
//  A_FBallTrack
//
//==========================================================================

final void A_FBallTrack()
{
	if (!Tracer && (P_Random() < 50))
	{
		FindEnemy();
	}
	SeekerMissile(2.0, 10.0);
}

states
{
Spawn:
	WEFT ABCD 2 Bright A_FBallTrack
	Loop
Death:
	WEFT EFGHIJKLMN 2 Bright
	Stop
}

defaultproperties
{
	Radius = 8.0;
	Height = 8.0;
	Speed = 1050.0;
	MissileDamage = 75;
	DamageType = 'Fire';
	bSeekerMissile = true;
	DeathSound = 'MageStaffExplode';
	DLightColour = RGB(255, 128, 0);
	DLightRadius = 126.0;
	//Obituary = "$ob_wfireball";
}
