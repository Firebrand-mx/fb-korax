class WeaponChaingun : KArenaWeapon;

//===========================================================================
//
//  A_KArenaFireCGun
//
//===========================================================================

final void A_KArenaFireCGun() self(KArenaPlayerPawn)
{
	TVec	dir;

	if (!bIsPlayer)
	{
		return;
	}
	KArenaWeapon Wpn = KArenaWeapon(PlayerEx(Player).ReadyWeapon);

	PlaySound('PistolFire', CHAN_WEAPON);

/*	if (!Player.Ammo[Ammo])
		return;
*/
	SetState(MissileState);
	Wpn.UseWeaponMana();

	if (Player.ViewStates[ps_weapon].State == Wpn.GetAttackState(false))
		Player.SetViewState(ps_flash, Wpn.FindState('Flash'));
	else
		Player.SetViewState(ps_flash, Wpn.FindState('Flash2'));

	Aim(dir, MISSILERANGE);
	Wpn.GunShot2(self, !Player(Player).Refire, dir);
	DLightColour = RGB(195, 79, 0);
}

states
{
Ready:
	CHGG A 1 A_WeaponReady
	Loop
Deselect:
	CHGG A 1 A_Lower
	Loop
Select:
	CHGG A 1 A_Raise
	Loop
Fire:
	CHGG AB 4 Bright A_KArenaFireCGun
	CHGG B 0 A_ReFire
	Goto Ready
Flash:
	CHGF A 5 Bright A_Light1
	CHGG A 0 A_Light0
	Stop
Flash2:
	CHGF B 5 Bright A_Light2
	Goto Flash+1
}

/* FOURTH */
defaultproperties
{
	Slot = 4;
	SelectionOrder = 4500;
	AmmoType1 = ItemManaRed;
	AmmoUse1 = 3;
	BotCombatDist = 256.0 + MISSILERANGE;
	wis_mod = true;
	int_mod = true;
	dex_mod = false;
	str_mod = false;
	bBotChooseMelee = false;
	bBotChooseMedium = true;
	bBotChooseRanged = true;
	bFireDamage = false;
	fire_tics = 4.0;
	refire_tics = 8.0;
	PickupMessage = "CHAINGUN";
	Obituary = "$ob_chaingun";
}
