int GetWeaponManaUse(Weapon weapon)
{
	int manause = weapon.manause;
	if (weapon.wis_mod)
	{
		manause = manause * 10 / wisdom;
	}
	// [FB] Always use mana, no matter what
	if(manause < 1)
	{
		manause = 1;
	}
	return manause;
}

