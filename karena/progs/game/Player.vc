//==========================================================================
//
//  GiveMana
//
//  Returns true if the player accepted the mana, false if it was
// refused (player has MAX_MANA).
//
//==========================================================================

bool GiveMana(class<Ammo> mana, int count)
{
	int prevMana;

	if (!mana)
	{
		return false;
	}
	Ammo ManaItem = Ammo(EntityEx(MO).FindInventory(mana));
	if (!ManaItem)
	{
		ManaItem = Level.Spawn(mana);
		ManaItem.AttachToOwner(EntityEx(MO));
		ManaItem.Amount = 0;
	}
	if (count == 0)
	{
		return true;
	}
	if (ManaItem.Amount == ManaItem.MaxAmount)
	{
		return false;
	}
	if (Level.Game.gameskill == sk_baby || Level.Game.gameskill == sk_nightmare)
	{
		// extra mana in baby mode and nightmare mode
		count += count >> 1;
	}
	prevMana = ManaItem.Amount;

	ManaItem.Amount += count;
	if (ManaItem.Amount > ManaItem.MaxAmount)
	{
		ManaItem.Amount = ManaItem.MaxAmount;
	}
	if (prevMana <= 0)
	{
		GotAmmo(ManaItem);
	}
	return true;
}

