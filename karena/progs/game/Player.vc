//==========================================================================
//
//  SetPlayerColour
//
//==========================================================================

void SetPlayerColour()
{
	MO.Translation = 0;
	if (PClass == HexenDefs::PCLASS_WITCHAVEN)
	{
		// [FB] The first type should be blue, and the second should be the
		// Witchaven's original red colour
		if (Colour == 0)
			MO.Translation = 1 + PClass * (MAXPLAYERS - 1);
		else if (Colour != 1)
			MO.Translation = Colour + PClass * (MAXPLAYERS - 1);
	}
	else if (PClass == HexenDefs::PCLASS_FIGHTER)
	{
		// The first type should be blue, and the third should be the
		// Fighter's original gold colour
		if (Colour == 0)
		{
			MO.Translation = 2;
		}
		else if (Colour != 2)
		{
			MO.Translation = Colour;
		}
	}
	else if (PClass == HexenDefs::PCLASS_HERETIC)
	{
		if (Colour == 0)
			MO.Translation = 3 + PClass * (MAXPLAYERS - 1);
		else if (Colour != 3)
			MO.Translation = Colour + PClass * (MAXPLAYERS - 1);
	}
	else if (PClass == HexenDefs::PCLASS_MARINE)
	{
		if (Colour == 0)
			MO.Translation = 4 + PClass * (MAXPLAYERS - 1);
		else if (Colour != 4)
			MO.Translation = Colour + PClass * (MAXPLAYERS - 1);
	}
	else if (Colour)
	{
		// Set colour translation bits for player sprites
		MO.Translation = PClass * (MAXPLAYERS - 1) + Colour;
	}

	// [CW] respawn player if team is selected or re-selected
	if (TeamSelection == HexenDefs::teamselection_wait || TeamSelection == HexenDefs::teamselection_reselect
		|| TeamSelection == HexenDefs::teamselection_autoselect)
	{		
		if (TeamSelection != HexenDefs::teamselection_autoselect &&
			!(TeamSelection == HexenDefs::teamselection_reselect && oldColour == Colour))
		{
			TeamSelection = HexenDefs::teamselection_done;	
			if (PlayerState != PST_DEAD)
			{
				MO.Destroy();
				MO = none;
				SpawnClient();
			}
			else
			{
				// [CW] For player's convenience
				Scoreboard(false);
				centreprint("you will join selected team after respawn");
			}
		}
		else
			TeamSelection = HexenDefs::teamselection_done;

		oldColour = Colour;
	}
}

//==========================================================================
//
//  SelectPlayerTeam
//
//==========================================================================

void SelectPlayerTeam()
{
	if (bIsBot || GetCvar('TeamAutoSelect') && TeamSelection != HexenDefs::teamselection_reselect)
	{
		AutoSelectTeam();
	}
	else
	{
		int i;
		int maxTeams;
		maxTeams = MainGameInfo(Level.Game).MaxTeamsInGame[MainGameInfo(Level.Game).GameType]
						> HexenDefs::MAXTEAMSINGAME ? HexenDefs::MAXTEAMSINGAME :
						MainGameInfo(Level.Game).MaxTeamsInGame[MainGameInfo(Level.Game).GameType];
		for (i = 0; i < HexenDefs::MAXTEAMSINGAME; i++)
		{
			if (MainGameInfo(Level.Game).Teams[i] == none)
				break;
		}
		
		if (TeamSelection != HexenDefs::teamselection_reselect)
		{
			TeamSelection = HexenDefs::teamselection_wait;
			SetControllable(false);
		}
		
		ClientTeamSelect(maxTeams, i, Colour,
			MainGameInfo(Level.Game).Teams[0] ? MainGameInfo(Level.Game).Teams[0].Colour : -1,
			MainGameInfo(Level.Game).Teams[0] ? MainGameInfo(Level.Game).Teams[0].GetPlayerCount() : 0,
			MainGameInfo(Level.Game).Teams[1] ? MainGameInfo(Level.Game).Teams[1].Colour : -1,
			MainGameInfo(Level.Game).Teams[1] ? MainGameInfo(Level.Game).Teams[1].GetPlayerCount() : 0);
	}
}

//==========================================================================
//
//  AutoSelectTeam
//
//==========================================================================

void AutoSelectTeam()
{
	int i;
	int new_colour = -1;
	int free_team_slots = 0;
	bool team_colours_free[HexenDefs::MAXPLAYERTEAMS];

	MainGameInfo game = MainGameInfo(Level.Game);

	bool bKeepEqual = GetCvar('KeepTeamsEqual');
	int count_limit = 0;
	if (bKeepEqual && game.Teams[0] && game.Teams[1])
		count_limit = game.Teams[0].GetPlayerCount();

	for (i = 0; i < HexenDefs::MAXPLAYERTEAMS; i++)
		team_colours_free[i] = true;
	for (i = 0; i < HexenDefs::MAXTEAMSINGAME; i++)
	{
		if (game.Teams[i])
			team_colours_free[game.Teams[i].Colour] = false;
	}

	for (i = 0; i < game.MaxTeamsInGame[game.GameType]; i++)
	{
		if (game.Teams[i] == none)
			free_team_slots++;
		else
		{
			if (bKeepEqual)
			{
				int count = game.Teams[i].GetPlayerCount();
				if (count_limit > count)
					count_limit = count;
			}
		}
	}

	if (free_team_slots == game.MaxTeamsInGame[game.GameType] ||
			free_team_slots > 0 && !(bKeepEqual && !team_colours_free[Colour]) && P_Random() > 127)
		new_colour = Colour;
	else
	{
		if (bKeepEqual)
		{
			for (i = 0; i < game.MaxTeamsInGame[game.GameType]; i++)
			{
				if (game.Teams[i] == none)
					break;
				if (game.Teams[i].GetPlayerCount() <= count_limit)
				{
					new_colour = game.Teams[i].Colour;
					break;
				}
			}

			if (new_colour < 0)
			{
				do
					new_colour = P_Random() % HexenDefs::MAXPLAYERTEAMS;
				while (!team_colours_free[new_colour]);
			}
		}
		else
		{
			new_colour =
				game.Teams[P_Random() % (game.MaxTeamsInGame[game.GameType] - free_team_slots)].Colour;
		}
	}
	Colour = new_colour;
	TeamSelection = HexenDefs::teamselection_autoselect;
}

