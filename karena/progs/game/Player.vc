int GetWeaponClassManaUse(class<Weapon> weapon)
{
	int manause = weapon.default.manause;
	if (weapon.default.wis_mod)
	{
		manause = manause * 10 / wisdom;
	}
	// [FB] Always use mana, no matter what
	if(manause < 1)
	{
		manause = 1;
	}
	return manause;
}

//==========================================================================
//
//  GetWeaponMUse
//
//==========================================================================

bool GetWeaponMUse(int weapon)
{
	class<Weapon>	w;

	w = GetWea(weapon);
	if (!w.default.ManaType1 && !w.default.ManaType2 && !w.default.ManaType3)
	{
		return true;
	}
	if (w.default.needsnomana)
	{
		return true;
	}
	if (w.default.ManaType1 &&
		EntityEx(MO).FindInventory(w.default.ManaType1).Amount < GetWeaponClassManaUse(w))
	{
		return false;
	}
	if (w.default.ManaType2 &&
		EntityEx(MO).FindInventory(w.default.ManaType2).Amount < GetWeaponClassManaUse(w))
	{
		return false;
	}
	if (w.default.ManaType3 &&
		EntityEx(MO).FindInventory(w.default.ManaType3).Amount < GetWeaponClassManaUse(w))
	{
		return false;
	}
	return true;
}

