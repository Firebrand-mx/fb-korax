class MaceFX3 : Projectile;

//===========================================================================
//
//  A_MaceBallImpact
//
//===========================================================================

final void A_MaceBallImpact()
{
	if (Origin.z <= FloorZ && HitFloorType())
	{
		// Landed in some sort of liquid
		Destroy();
		return;
	}
	if ((Health != 1234) && (Origin.z <= FloorZ) && Velocity.z)
	{
		// Bounce
		Health = 1234;
		Velocity.z = Velocity.z * 192.0 / 256.0;
		BounceType = BOUNCE_None;
		SetState(IdleState);
		PlaySound('Bounce', CHAN_VOICE);
	}
	else
	{
		// Explode
		bNoGravity = true;		
		Gravity = 1.0;
		SendExplosion(RGB(255, 128, 0), Origin);
		PlaySound('weapons/macehit', CHAN_VOICE);
	}
}

states
{
Spawn:
	FX02 AB 4
	Loop
Death:
	FX02 F 4 Bright A_MaceBallImpact
	FX02 GHIJ 4 Bright
	Stop
}

defaultproperties
{
	Radius = 8.0;
	Height = 6.0;
	Speed = 245.0;
	Gravity = 0.125;	
	MissileDamage = 4;
	BounceType = BOUNCE_Heretic;
//	bThruGhost = true;
	DamageType = 'Fire';
	bNoGravity = false;
	bActivateImpact = true;
}
