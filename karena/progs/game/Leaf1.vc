	S_LEAF1_16('LEF1', 6, 4.0 / 35.0, S_LEAF1_17) = A_LeafThrust
	S_LEAF1_17('LEF1', 7, 4.0 / 35.0, S_LEAF1_18) = none
	S_LEAF1_18('LEF1', 8, 4.0 / 35.0, none) = none
	S_LEAF_X1('LEF3', 3, 10.0 / 35.0, S_LEAF_X1) = A_LeafCheck
