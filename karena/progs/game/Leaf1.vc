	S_LEAF1_8('LEF1', 7, 4.0 / 35.0, S_LEAF1_9) = A_LeafThrust
	S_LEAF1_9('LEF1', 8, 4.0 / 35.0, S_LEAF1_10) = none
	S_LEAF1_10('LEF1', 0, 4.0 / 35.0, S_LEAF1_11) = none
	S_LEAF1_11('LEF1', 1, 4.0 / 35.0, S_LEAF1_12) = none
	S_LEAF1_12('LEF1', 2, 4.0 / 35.0, S_LEAF1_13) = A_LeafThrust
	S_LEAF1_13('LEF1', 3, 4.0 / 35.0, S_LEAF1_14) = none
	S_LEAF1_14('LEF1', 4, 4.0 / 35.0, S_LEAF1_15) = none
