class Leaf1 : Fragment;

state RestartState;
int RestartCount;

//============================================================================
//
//  A_LeafThrust
//
//============================================================================

final void A_LeafThrust()
{
	if (Random() > 0.375)
	{
		return;
	}
	Velocity.z += (Random() * 2.0 + 1.0) * 35.0;
}

//============================================================================
//
//  A_LeafCheck
//
//============================================================================

final void A_LeafCheck()
{
	RestartCount++;
	if (RestartCount >= 20)
	{
		SetState(none);
		return;
	}
	if (Random() > 0.25)
	{
		if (!Velocity.x && !Velocity.y)
		{
			Thrust(Instigator.Angles.yaw, Random() * 2.0 + 1.0);
		}
		return;
	}
	SetState(RestartState);
	Velocity.z = (Random() * 2.0 + 1.0) * 35.0;
	Thrust(Instigator.Angles.yaw, Random() * 2.0 + 2.0);
	bMissile = true;
}

__states__
{
	S_LEAF1_1('LEF1', 0, 4.0 / 35.0, S_LEAF1_2) = none
	S_LEAF1_2('LEF1', 1, 4.0 / 35.0, S_LEAF1_3) = none
	S_LEAF1_3('LEF1', 2, 4.0 / 35.0, S_LEAF1_4) = none
	S_LEAF1_4('LEF1', 3, 4.0 / 35.0, S_LEAF1_5) = A_LeafThrust
	S_LEAF1_5('LEF1', 4, 4.0 / 35.0, S_LEAF1_6) = none
	S_LEAF1_6('LEF1', 5, 4.0 / 35.0, S_LEAF1_7) = none
