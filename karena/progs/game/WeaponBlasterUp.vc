class WeaponBlasterUp : WeaponBlaster;

states
{
Ready:
	WRIP A 1 A_WeaponReady
	Loop
Deselect:
	WRIP A 1 A_Lower
	Loop
Select:
	WRIP A 1 A_Raise
	Loop
Fire:
Hold:
	WRIP D 3 A_KArenaFireBlasterPL2
	WRIP C 4
	WRIP B 4
	WRIP A 0 A_ReFire
	Goto Ready
}

/*FOURTH*/
defaultproperties
{
	Slot = 4;
	SelectionOrder = 4100;
	AmmoType1 = ItemManaRed;
	AmmoUse1 = 5;
	BotCombatDist = 512.0 + MISSILERANGE;
	wis_mod = true;
	int_mod = true;
	dex_mod = false;
	str_mod = false;
	bBotChooseMelee = true;
	bBotChooseMedium = true;
	bBotChooseRanged = true;
	refire_tics = 12.0;
	fire_tics = 3.0;
	PSpriteSY = 15.0;
	PickupMessage = "RIPPER";
}
