class PhoenixFX2 : Projectile;

//===========================================================================
//
//  A_FlameEnd
//
//===========================================================================

void A_FlameEnd()
{
	Velocity.z += 1.5 * 35.0;
}

//===========================================================================
//
//  A_FloatPuff
//
//===========================================================================

void A_FloatPuff()
{
	Velocity.z += 1.8 * 35.0;
}

