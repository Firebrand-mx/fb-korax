}

//==========================================================================
//
//	Tick
//
//==========================================================================

void Tick(float deltaTime)
{
	if (!TransSet)
		SetTranslation();

	::Tick(deltaTime);
}

defaultproperties
{
	DLightColour = RGB(255, 255, 255);
	bDynamicLight = true;
}
