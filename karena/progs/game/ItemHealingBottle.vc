class ItemHealingBottle : Inventory
	__mobjinfo__(81)
	__scriptid__(23);

//==========================================================================
//
//  TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	if (Toucher.GiveBody(10))
	{
		GoAwayAndDie();
		return true;
	}
	return false;
}

__states__
{
	S_ITEM_PTN1_1('PTN1', 0, 3.0 / 35.0, S_ITEM_PTN1_2) = none
	S_ITEM_PTN1_2('PTN1', 1, 3.0 / 35.0, S_ITEM_PTN1_3) = none
	S_ITEM_PTN1_3('PTN1', 2, 3.0 / 35.0, S_ITEM_PTN1_1) = none
}

defaultproperties
{
	Height = 32.0;
	bFloatBob = true;
	IdleState = S_ITEM_PTN1_1;
	PickupMessage = "$txt_itemhealth";
}
