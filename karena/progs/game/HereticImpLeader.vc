class HereticImpLeader : HereticImp
	__mobjinfo__(15010);

//==========================================================================
//
//  A_ImpMsAttack2
//
//  Fireball attack of the imp leader.
//
//==========================================================================

final void A_ImpMsAttack2()
{
	if (!Target)
	{
		return;
	}
	PlaySound(AttackSound, CHAN_WEAPON);
	if (CheckMeleeRange())
	{
		Target.Damage(self, self, 5 + (P_Random() & 7));
		return;
	}
	SpawnMissile(Target, HereticImpBall);
}

__states__
{
	//	Missile attack
	S_IMP_MSATK2_1('IMPX', 3, 6.0 / 35.0, S_IMP_MSATK2_2) = A_FaceTarget
	S_IMP_MSATK2_2('IMPX', 4, 6.0 / 35.0, S_IMP_MSATK2_3) = A_FaceTarget
	S_IMP_MSATK2_3('IMPX', 5, 6.0 / 35.0, S_IMP_FLY1) = A_ImpMsAttack2
}

defaultproperties
{
	Health = 80;
	GibsHealth = -40;
	MeleeState = none;
	MissileState = S_IMP_MSATK2_1;
	AttackSound = 'ImpAttack2';
	pawnname = 10;				//[CW]
}
