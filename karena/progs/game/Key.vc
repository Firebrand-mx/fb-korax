class Key : Pickup
	abstract;

int KeyType;

//==========================================================================
//
//  TouchSpecial
//
//==========================================================================

void TouchSpecial(Actor Toucher)
{
	if (!Toucher.bPickUp)
	{
		// Can't be picked up by toucher
		return;
	}
	if (Toucher.Health <= 0)
	{
		// Toucher is dead
		return;
	}
	if (!Player(Toucher.Player).GiveKey(KeyType))
	{
		return;
	}
	Toucher.Player.cprint(PickupMessage);
	if (Special)
	{
		Level.ExecuteActionSpecial(Special, Args[0], Args[1], Args[2], Args[3],
			Args[4], NULL, 0, Toucher);
		Special = 0;
	}
	if (!Level.Game.netgame)
	{
		// Only remove keys in single player game
		if (Level.Game.deathmatch && !bDropped)
		{
			HideSpecial();
		}
		else
		{
			Destroy();
		}
	}
	Player(Toucher.Player).BonusFlash += BONUSADD;
	Toucher.PlaySound('PickupKey', CHAN_ITEM);
}

defaultproperties
{
	Radius = 8.0;
}
