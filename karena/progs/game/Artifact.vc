//==========================================================================
//
//  SetDormantArtifact
//
//  Removes the bSpecial flag and initiates the artifact pickup animation.
//
//==========================================================================

void SetDormantArtifact()
{
	bSpecial = false;
	if (Level.Game.deathmatch && !bDropped)
	{
		SetState(DormantState);
	}
	else
	{
		// [FB] KA always wants items to respawn
		if(!bDropped)
			SetState(DormantState);
/*		// Don't respawn
		SetState(S_DEADARTI1);*/
	}
}

//==========================================================================
//
//  TouchSpecial
//
//==========================================================================

void TouchSpecial(Actor Toucher)
{
	PlayerPawn P;

	if (!Toucher.bPickUp)
	{
		// Can't be picked up by toucher
		return;
	}
	if (Toucher.Health <= 0)
	{
		// Toucher is dead
		return;
	}
	P = PlayerPawn(Toucher);
	if (!P)
	{
		//	Shouldn't happen
		return;
	}
	if (Player(P.Player).GiveArtifact(ArtifactType))
	{
		if (Special)
		{
			Level.ExecuteActionSpecial(Special, Args[0], Args[1], Args[2],
				Args[3], Args[4], NULL, 0, P);
			Special = 0;
		}
		Player(P.Player).BonusFlash += BONUSADD;
		if (ArtifactType < HexenDefs::arti_firstpuzzitem)
		{
			SetDormantArtifact();
			PlaySound('PickupArtifact', CHAN_ITEM);
			P.Player.cprint(MainGameInfo(Level.Game).artifactMessages[ArtifactType]);
		}
		else
		{
			// Puzzle item
			PlayFullVolumeSound('PickupItem', CHAN_ITEM);
			P.Player.cprint(MainGameInfo(Level.Game).artifactMessages[ArtifactType]);
			if (!Level.Game.netgame || Level.Game.deathmatch)
			{
				// Remove puzzle items if not cooperative netplay
				Remove();
			}
		}
	}
}

