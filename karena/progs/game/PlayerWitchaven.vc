class PlayerWitchaven : PlayerPawn;

states
{
Spawn:
	WITC A -1
	Stop
See:
	WITC ABCD 4
	Loop
Melee:
Missile:
	WITC EF 8
	WITC G 8 Bright
	Goto Spawn
Pain:
	WITC H 4 		// TEMP. SPRITE
	WITC I 4 A_Pain // TEMP. SPRITE
	Goto Spawn
Death:
	WITC L 6
	WITC M 6 A_PlayerScream
	WITC NO 6
	WITC P 6 A_NoBlocking
	WITC QQ 6
	WITC R -1 A_AddPlayerCorpse
	Stop
XDeath:
	WITC L 5 A_PlayerScream
	WITC M 5
	WITC N 5 A_NoBlocking
	WITC OPQR 5
	WITC S -1 A_AddPlayerCorpse
	Stop
Ice:
	WITC T 5 A_FreezeDeath
	WITC T 1 A_FreezeDeathChunks
	Wait
Burn:
	FDTH G 5 Bright { A_PlaySound("*burndeath"); }
	FDTH H 4 Bright A_PlayerScream
	FDTH I 5 Bright
	FDTH J 4 Bright
	FDTH K 5 Bright
	FDTH L 4 Bright
	FDTH M 5 Bright
	FDTH N 4 Bright
	FDTH O 5 Bright
	FDTH P 4 Bright
	FDTH Q 5 Bright
	FDTH R 4 Bright
	FDTH S 5 Bright A_NoBlocking
	FDTH T 4 Bright
	FDTH U 5 Bright
	FDTH V 4 Bright
	ACLO E 35 A_CheckPlayerDone
	Wait
BurnGone:
	ACLO E 8
	Stop
}

defaultproperties
{
	Health = 100;
	Radius = 16.0;
	Height = 64.0;
	Mass = 100.0;
	PainChance = 1.0;
	ViewHeight = 48.0;
	TranslStart = 164;
	TranslEnd = 185;
	RDFactor = 0.25;
	JumpVelZ = 9.5 * 35.0;
	CrunchSound = '*splat';
	SoundClass = 'witchaven';
	DisplayName = "Witchaven";
	ScoreIcon = 'icon05';
	InitialStrength = 10;
	InitialWisdom = 10;
	InitialDexterity = 10;
	InitialConstitution = 10;
	InitialIntelligence = 10;

	WeaponClasses[0] = WeaponWitchavenPunch;
	WeaponClasses[1] = WeaponWitchavenSSword;
	WeaponClasses[2] = WeaponWitchavenMorningStar;
	WeaponClasses[3] = WeaponWitchavenMissileSpell;
	WeaponClasses[4] = WeaponWitchavenLSword;
	WeaponClasses[5] = WeaponWitchavenFireballSpell;
	WeaponClasses[6] = WeaponWitchavenLongBow;
	WeaponClasses[7] = WeaponWitchavenDisintegrationSpell;

	DropItemList.Num = 5;
	DropItemList[0].Type = ItemManaBlue; DropItemList[0].Amount = 25;
	DropItemList[1].Type = ItemManaGreen; DropItemList[1].Amount = 25;
	DropItemList[2].Type = ItemManaRed; DropItemList[2].Amount = 25;
	DropItemList[3].Type = WeaponWitchavenPunch; DropItemList[3].Amount = 1;
	DropItemList[4].Type = WeaponWitchavenSSword; DropItemList[4].Amount = 1;
}
